@model SantiyeTalepWebUI.Models.ViewModels.RegisterSupplierViewModel
@{
    ViewData["Title"] = "Tedarikçi Kayıt";
    Layout = null;
}

<!doctype html>
<html lang="tr" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] | Şantiye Talep Sistemi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Şantiye Talep Yönetim Sistemi - Tedarikçi Kayıt" name="description" />
    <meta content="Themesbrand" name="author" />
    
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Layout config Js -->
    <script src="~/assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/assets/css/custom.min.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>
            
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="#" class="d-inline-block auth-logo">
                                    <img src="~/assets/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-medium">Şantiye Talep Yönetim Sistemi</p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="card mt-4">
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Tedarikçi Kaydı</h5>
                                    <p class="text-muted">Şantiye Talep Sistemi'ne katılın ve iş fırsatlarını kaçırmayın</p>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="ri-error-warning-line me-2"></i>@Model.ErrorMessage
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                                {
                                    <div class="alert alert-success" role="alert">
                                        <i class="ri-check-circle-line me-2"></i>@Model.SuccessMessage
                                    </div>
                                }

                                <div class="p-2 mt-4">
                                    <form asp-action="RegisterSupplier" method="post" id="supplierRegistrationForm">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="RegisterDto.FullName" class="form-label">Ad Soyad <span class="text-danger">*</span></label>
                                                    <input asp-for="RegisterDto.FullName" class="form-control" placeholder="Ad Soyadınızı giriniz" required />
                                                    <span asp-validation-for="RegisterDto.FullName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="RegisterDto.CompanyName" class="form-label">Şirket Adı <span class="text-danger">*</span></label>
                                                    <input asp-for="RegisterDto.CompanyName" class="form-control" placeholder="Şirket adını giriniz" required />
                                                    <span asp-validation-for="RegisterDto.CompanyName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="RegisterDto.Email" class="form-label">E-posta <span class="text-danger">*</span></label>
                                                    <input asp-for="RegisterDto.Email" type="email" class="form-control" placeholder="E-posta adresinizi giriniz" required />
                                                    <span asp-validation-for="RegisterDto.Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="RegisterDto.Phone" class="form-label">Telefon</label>
                                                    <input asp-for="RegisterDto.Phone" class="form-control" placeholder="Telefon numaranızı giriniz" id="phoneInput" />
                                                    <span asp-validation-for="RegisterDto.Phone" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="RegisterDto.Password" class="form-label">Şifre <span class="text-danger">*</span></label>
                                                    <div class="position-relative auth-pass-inputgroup mb-3">
                                                        <input asp-for="RegisterDto.Password" type="password" class="form-control pe-5 password-input" placeholder="Şifrenizi giriniz" required />
                                                        <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon">
                                                            <i class="ri-eye-fill align-middle"></i>
                                                        </button>
                                                    </div>
                                                    <span asp-validation-for="RegisterDto.Password" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="RegisterDto.TaxNumber" class="form-label">Vergi Numarası</label>
                                                    <input asp-for="RegisterDto.TaxNumber" class="form-control" placeholder="Vergi numaranızı giriniz" />
                                                    <span asp-validation-for="RegisterDto.TaxNumber" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="RegisterDto.Address" class="form-label">Adres</label>
                                            <textarea asp-for="RegisterDto.Address" class="form-control" rows="3" placeholder="Adresinizi giriniz"></textarea>
                                            <span asp-validation-for="RegisterDto.Address" class="text-danger"></span>
                                        </div>

                                        <div class="mt-4">
                                            <button class="btn btn-success w-100" type="submit">
                                                <i class="ri-user-add-line me-2"></i>Kayıt Ol
                                            </button>
                                        </div>

                                        <div class="mt-4 text-center">
                                            <div class="signin-other-title">
                                                <h5 class="fs-13 mb-4 title">Zaten hesabınız var mı?</h5>
                                            </div>
                                            <div>
                                                <a asp-action="Login" class="btn btn-primary waves-effect waves-light">
                                                    <i class="ri-login-box-line fs-16"></i> Giriş Yap
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->
                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->

        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-white-50">© <script>document.write(new Date().getFullYear())</script> Şantiye Talep Sistemi. <a href="https://www.urssoft.com" class="text-white-50">UrsSoft Teknoloji A.Ş.</a> tarafından geliştirildi.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->

    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/feather-icons/feather.min.js"></script>
    <script src="~/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="~/assets/js/plugins.js"></script>

    <!-- particles js -->
    <script src="~/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/assets/js/pages/particles.app.js"></script>
    <!-- password-addon init -->
    <script src="~/assets/js/pages/password-addon.init.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script>
        // Password show/hide functionality
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.querySelector('.password-input');
            const passwordAddon = document.querySelector('.password-addon');
            
            if (passwordAddon && passwordInput) {
                passwordAddon.addEventListener('click', function() {
                    const icon = this.querySelector('i');
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        icon.classList.remove('ri-eye-fill');
                        icon.classList.add('ri-eye-off-fill');
                    } else {
                        passwordInput.type = 'password';
                        icon.classList.remove('ri-eye-off-fill');
                        icon.classList.add('ri-eye-fill');
                    }
                });
            }

            // Phone number formatting
            const phoneInput = document.getElementById('phoneInput');
            if (phoneInput) {
                phoneInput.addEventListener('input', function() {
                    let value = this.value;
                    // Remove all non-numeric characters
                    value = value.replace(/\D/g, '');
                    
                    // Format the phone number
                    if (value.length > 0) {
                        if (value.length <= 4) {
                            value = value;
                        } else if (value.length <= 7) {
                            value = value.slice(0, 4) + ' ' + value.slice(4);
                        } else if (value.length <= 9) {
                            value = value.slice(0, 4) + ' ' + value.slice(4, 7) + ' ' + value.slice(7);
                        } else if (value.length <= 11) {
                            value = value.slice(0, 4) + ' ' + value.slice(4, 7) + ' ' + value.slice(7, 9) + ' ' + value.slice(9, 11);
                        } else {
                            value = value.slice(0, 11);
                            value = value.slice(0, 4) + ' ' + value.slice(4, 7) + ' ' + value.slice(7, 9) + ' ' + value.slice(9, 11);
                        }
                    }
                    
                    this.value = value;
                });
            }

            // Form submission - clean phone number and add loading state
            const form = document.getElementById('supplierRegistrationForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    if (phoneInput) {
                        let phoneValue = phoneInput.value;
                        // Remove spaces and format to clean number before submission
                        phoneValue = phoneValue.replace(/\s/g, '');
                        phoneInput.value = phoneValue;
                    }

                    // Add loading state to button
                    const submitBtn = form.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="ri-loader-2-line me-2 spinner-border spinner-border-sm" role="status"></i>Kaydediliyor...';
                    }
                });
            }
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</body>
</html>