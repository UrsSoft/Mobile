@model SantiyeTalepWebUI.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Þifre Sýfýrla";
    Layout = null;
}

<!doctype html>
<html lang="tr" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">

<head>
    <meta charset="utf-8" />
    <title>Þifre Sýfýrla | Þantiye Talep Sistemi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Þantiye Talep Yönetim Sistemi" name="description" />
    <meta content="Themesbrand" name="author" />
    
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Layout config Js -->
    <script src="~/assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/assets/css/custom.min.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>
            
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="/" class="d-inline-block auth-logo">
                                    <img src="~/assets/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-medium">Þantiye Talep Yönetim Sistemi</p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">
                            <div class="card-body p-4">
                                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                                {
                                    <div class="text-center mt-2 mb-4">
                                        <div class="avatar-lg mx-auto">
                                            <div class="avatar-title bg-light text-success display-3 rounded-circle">
                                                <i class="ri-checkbox-circle-fill"></i>
                                            </div>
                                        </div>
                                        <h5 class="text-success mt-4">Baþarýlý!</h5>
                                        <p class="text-muted">@Model.SuccessMessage</p>
                                    </div>
                                    
                                    <div class="mt-4">
                                        <a asp-action="Login" class="btn btn-success w-100">
                                            <i class="ri-login-box-line me-1"></i>
                                            Giriþ Sayfasýna Dön
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center mt-2">
                                        <h5 class="text-primary">Yeni Þifre Belirleyin</h5>
                                        <p class="text-muted">Hesabýnýz için yeni bir þifre oluþturun.</p>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="ri-error-warning-line me-2"></i>@Model.ErrorMessage
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    <div class="p-2 mt-4">
                                        <form asp-action="ResetPassword" method="post">
                                            <input type="hidden" asp-for="Token" />
                                            
                                            <div class="mb-3">
                                                <label asp-for="NewPassword" class="form-label">Yeni Þifre <span class="text-danger">*</span></label>
                                                <div class="position-relative auth-pass-inputgroup">
                                                    <input asp-for="NewPassword" type="password" class="form-control pe-5 password-input" placeholder="Yeni þifrenizi giriniz" id="new-password-input" autofocus />
                                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="new-password-addon" style="background: none; border: none; padding: 0.375rem 0.75rem;">
                                                        <i class="ri-eye-fill align-middle"></i>
                                                    </button>
                                                </div>
                                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                            </div>

                                            <div class="mb-3">
                                                <label asp-for="ConfirmPassword" class="form-label">Yeni Þifre (Tekrar) <span class="text-danger">*</span></label>
                                                <div class="position-relative auth-pass-inputgroup">
                                                    <input asp-for="ConfirmPassword" type="password" class="form-control pe-5 password-input" placeholder="Þifrenizi tekrar giriniz" id="confirm-password-input" />
                                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="confirm-password-addon" style="background: none; border: none; padding: 0.375rem 0.75rem;">
                                                        <i class="ri-eye-fill align-middle"></i>
                                                    </button>
                                                </div>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>

                                            <div class="alert alert-info" role="alert">
                                                <i class="ri-information-line me-2"></i>
                                                Þifreniz en az 6 karakter olmalýdýr.
                                            </div>

                                            <div class="mt-4">
                                                <button class="btn btn-success w-100" type="submit">
                                                    <i class="ri-lock-password-line me-1"></i>
                                                    Þifremi Deðiþtir
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                }

                                <div class="mt-4 text-center">
                                    <p class="mb-0">
                                        <a asp-action="Login" class="fw-semibold text-primary text-decoration-underline">
                                            Giriþ sayfasýna dön
                                        </a>
                                    </p>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->
                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->

        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0">© <script>document.write(new Date().getFullYear())</script> Þantiye Talep Sistemi. <a href="https://www.urssoft.com">UrsSoft Teknoloji A.Þ.</a> tarafýndan geliþtirildi.</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->

    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/feather-icons/feather.min.js"></script>
    <script src="~/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="~/assets/js/plugins.js"></script>

    <!-- particles js -->
    <script src="~/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/assets/js/pages/particles.app.js"></script>

    <script>
        // Þifre göster/gizle fonksiyonu - Yeni Þifre
        document.addEventListener('DOMContentLoaded', function() {
            const newPasswordInput = document.getElementById('new-password-input');
            const newPasswordAddon = document.getElementById('new-password-addon');
            
            if (newPasswordAddon && newPasswordInput) {
                newPasswordAddon.addEventListener('click', function(e) {
                    e.preventDefault();
                    const icon = this.querySelector('i');
                    
                    if (newPasswordInput.type === 'password') {
                        newPasswordInput.type = 'text';
                        icon.classList.remove('ri-eye-fill');
                        icon.classList.add('ri-eye-off-fill');
                    } else {
                        newPasswordInput.type = 'password';
                        icon.classList.remove('ri-eye-off-fill');
                        icon.classList.add('ri-eye-fill');
                    }
                });
            }

            // Þifre göster/gizle fonksiyonu - Þifre Tekrarý
            const confirmPasswordInput = document.getElementById('confirm-password-input');
            const confirmPasswordAddon = document.getElementById('confirm-password-addon');
            
            if (confirmPasswordAddon && confirmPasswordInput) {
                confirmPasswordAddon.addEventListener('click', function(e) {
                    e.preventDefault();
                    const icon = this.querySelector('i');
                    
                    if (confirmPasswordInput.type === 'password') {
                        confirmPasswordInput.type = 'text';
                        icon.classList.remove('ri-eye-fill');
                        icon.classList.add('ri-eye-off-fill');
                    } else {
                        confirmPasswordInput.type = 'password';
                        icon.classList.remove('ri-eye-off-fill');
                        icon.classList.add('ri-eye-fill');
                    }
                });
            }
        });
    </script>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>

</html>
