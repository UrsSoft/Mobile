@model SantiyeTalepWebUI.Models.DTOs.OfferListViewModel
@{
    ViewData["Title"] = "Tekliflerim";
    Layout = "~/Views/Shared/_SupplierLayout.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            
            <!-- Page Title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">
                            <i class="ri-price-tag-3-line me-2"></i>Tekliflerim
                        </h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Dashboard</a></li>
                                <li class="breadcrumb-item active">Tekliflerim</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Alert for empty state -->
            @if (!Model.Offers.Any())
            {
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center py-5">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="ri-price-tag-line display-1 text-muted mb-4"></i>
                                    <h5 class="text-muted mb-3">Henüz teklif vermediniz</h5>
                                    <p class="text-muted mb-4">Açýk taleplere teklif vererek admin onayýndan geçen tekliflerinizi burada görüntüleyebilirsiniz.</p>
                                    <a href="@Url.Action("AvailableRequests")" class="btn btn-primary">
                                        <i class="ri-add-line me-1"></i> Açýk Taleplere Göz At
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
              
                <!-- Offers List -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h4 class="card-title mb-0">Teklif Listesi</h4>
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("AvailableRequests")" class="btn btn-primary btn-sm">
                                            <i class="ri-add-line me-1"></i> Yeni Teklif Ver
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Filters -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-4">
                                        <div class="search-box">
                                            <input type="text" class="form-control search" placeholder="Teklif ara..." id="searchInput">
                                            <i class="ri-search-line search-icon"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <select class="form-select" id="statusFilter">
                                            <option value="">Tüm Durumlar</option>
                                            <option value="1">Admin Onayý Bekleyen</option>
                                            <option value="2">Admin Onaylý</option>
                                            <option value="3">Admin Reddetti</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="date" class="form-control" id="dateFilter" placeholder="Tarih filtrele">
                                    </div>
                                </div>

                                <!-- Offers Grid -->
                                <div class="row" id="offersGrid">
                                    @foreach (var offer in Model.Offers.OrderByDescending(o => o.OfferDate))
                                    {
                                        <div class="col-xl-6 col-lg-12 offer-item" data-status="@((int)offer.Status)" data-date="@offer.OfferDate.ToString("yyyy-MM-dd")">
                                            <div class="card border @(offer.Status == OfferStatus.Pending ? "border-warning" : offer.Status == OfferStatus.Approved ? "border-success" : "border-danger")">
                                                <div class="card-header">
                                                    <div class="d-flex align-items-center justify-content-between">
                                                        <h6 class="card-title mb-0">
                                                            <i class="ri-file-list-line me-2"></i>Talep #@offer.RequestId
                                                            <span class="badge bg-info-subtle text-info ms-2">
                                                                <i class="ri-check-line me-1"></i>Teklif Verildi
                                                            </span>
                                                        </h6>                                                     
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-md-8">
                                                            <h6 class="mb-3">@offer.RequestTitle</h6>
                                                            <div class="mb-3">
                                                                <span>
                                                                    <i class="ri-price-tag-line me-1"></i>@offer.Brand
                                                                </span>
                                                                <span>
                                                                    <i class="ri-hashtag me-1"></i>@offer.Quantity adet
                                                                </span>
                                                            </div>
                                                           
                                                            <div class="d-flex gap-2 mb-3">
                                                                <span>
                                                                    <i class="ri-truck-line me-1"></i>@offer.DeliveryTypeText
                                                                </span>
                                                                <span>
                                                                    <i class="ri-truck-line me-1"></i>@offer.Discount
                                                                </span>
                                                            </div>
                                                            <div class="d-flex gap-2 mb-3">
                                                                <small class="text-muted">
                                                                    <i class="ri-calendar-line me-1"></i>@offer.OfferDate.ToString("dd.MM.yyyy HH:mm")
                                                                </small>
                                                            </div>
                                                            <!-- Teklif Durumu Detayý -->
                                                           
                                                        </div>
                                                        <div class="col-md-4 text-end">
                                                            <div class="mb-2">
                                                                <h6 class="text-muted mb-1">Birim Fiyat</h6>
                                                                <h6 class="mb-0">@offer.CurrencySymbol@offer.Price.ToString("N2")</h6>
                                                            </div>
                                                            @if (offer.Discount > 0)
                                                            {
                                                                <div class="mb-2">
                                                                    <h6 class="text-muted mb-1">Ýskonto</h6>
                                                                    <span class="badge bg-success">%@offer.Discount</span>
                                                                </div>
                                                            }
                                                            <div class="mb-3">
                                                                <h6 class="text-muted mb-1">Toplam Teklif</h6>
                                                                <h5 class="text-primary mb-0">@offer.CurrencySymbol@offer.FinalPrice.ToString("N2")</h5>
                                                            </div>
                                                            
                                                            <!-- Teklif Özeti -->
                                                            <div class="bg-light rounded p-2 mb-3">
                                                                <small class="text-muted d-block">
                                                                    <i class="ri-calculator-line me-1"></i>
                                                                    @offer.Quantity × @offer.CurrencySymbol@offer.Price.ToString("N2") = @offer.CurrencySymbol@offer.TotalPrice.ToString("N2")
                                                                </small>
                                                                @if (offer.Discount > 0)
                                                                {
                                                                    <small class="text-success d-block">
                                                                        <i class="ri-percent-line me-1"></i>
                                                                        -%@offer.Discount (@offer.CurrencySymbol@offer.DiscountAmount.ToString("N2"))
                                                                    </small>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="flex-grow-1 me-3">
                                                            <div class="alert @(offer.Status == OfferStatus.Pending ? "alert-warning" : offer.Status == OfferStatus.Approved ? "alert-success" : "alert-danger") border-0 py-2 mb-0">
                                                                @if (offer.Status == OfferStatus.Pending)
                                                                {
                                                                    <small>
                                                                        <i class="ri-time-line me-1"></i>
                                                                        <strong>Durum:</strong> Teklifiniz admin tarafýndan deðerlendiriliyor
                                                                    </small>
                                                                }
                                                                else if (offer.Status == OfferStatus.Approved)
                                                                {
                                                                    <small>
                                                                        <i class="ri-check-double-line me-1"></i>
                                                                        <strong>Durum:</strong> Teklifiniz kabul edildi ve tedarik sürecine alýndý
                                                                    </small>
                                                                }
                                                                else
                                                                {
                                                                    <small>
                                                                        <i class="ri-close-circle-line me-1"></i>
                                                                        <strong>Durum:</strong> Teklifiniz admin tarafýndan uygun bulunmadý
                                                                    </small>
                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="flex-shrink-0">
                                                            <div class="d-flex gap-2">
                                                                <a href="@Url.Action("OfferDetails", new { id = offer.Id })" class="btn btn-soft-primary btn-sm">
                                                                    <i class="ri-eye-line me-1"></i> Detay
                                                                </a>
                                                                @if (offer.Status == OfferStatus.Pending)
                                                                {
                                                                    <button class="btn btn-soft-danger btn-sm" onclick="withdrawOffer(@offer.Id)">
                                                                        <i class="ri-close-line me-1"></i> Geri Çek
                                                                    </button>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Filtering
        document.getElementById('searchInput').addEventListener('input', filterOffers);
        document.getElementById('statusFilter').addEventListener('change', filterOffers);
        document.getElementById('dateFilter').addEventListener('change', filterOffers);

        function filterOffers() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            
            const items = document.querySelectorAll('.offer-item');
            
            items.forEach(item => {
                let show = true;
                
                if (searchTerm) {
                    const text = item.textContent.toLowerCase();
                    if (!text.includes(searchTerm)) {
                        show = false;
                    }
                }
                
                if (statusFilter && item.dataset.status !== statusFilter) {
                    show = false;
                }
                
                if (dateFilter && item.dataset.date !== dateFilter) {
                    show = false;
                }
                
                item.style.display = show ? '' : 'none';
            });
        }

        // Withdraw offer
        async function withdrawOffer(offerId) {
            const result = await Swal.fire({
                title: 'Teklifi Geri Çek',
                text: 'Bu teklifi geri çekmek istediðinizden emin misiniz? Bu iþlem geri alýnamaz.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Evet, Geri Çek',
                cancelButtonText: 'Ýptal',
                confirmButtonColor: '#dc3545'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/Supplier/WithdrawOffer/${offerId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    const apiResult = await response.json();
                    
                    if (apiResult.success) {
                        Swal.fire('Baþarýlý', 'Teklif geri çekildi', 'success')
                            .then(() => window.location.reload());
                    } else {
                        Swal.fire('Hata', apiResult.message, 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire('Hata', 'Bir hata oluþtu', 'error');
                }
            }
        }

        // Counter animation
        document.addEventListener('DOMContentLoaded', function() {
            const counters = document.querySelectorAll('.counter-value');
            
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                const start = 0;
                const duration = 1000;
                const step = (target - start) / (duration / 16);
                
                let current = start;
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    counter.textContent = Math.floor(current);
                }, 16);
            });
        });
    </script>
}

@Html.AntiForgeryToken()