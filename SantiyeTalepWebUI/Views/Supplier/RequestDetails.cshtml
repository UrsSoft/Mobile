@model SantiyeTalepWebUI.Models.DTOs.RequestDto
@{
    ViewData["Title"] = "Talep Detaylarý";
    Layout = "~/Views/Shared/_SupplierLayout.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">

            <!-- Page Title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Talep Detaylarý</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("AvailableRequests")">Açýk Talepler</a></li>
                                <li class="breadcrumb-item active">Talep Detaylarý</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xxl-9">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <h5 class="card-title flex-grow-1 mb-0">
                                    <i class="ri-file-text-line align-middle me-1 text-muted"></i>
                                    Talep #@Model.Id
                                </h5>
                                <div class="flex-shrink-0">
                                    @switch (Model.Status)
                                    {
                                        case RequestStatus.Open:
                                            <span class="badge badge-soft-success fs-11">
                                                <i class="ri-time-line align-bottom me-1"></i> Açýk
                                            </span>
                                            break;
                                        case RequestStatus.InProgress:
                                            <span class="badge badge-soft-info fs-11">
                                                <i class="ri-loader-4-line align-bottom me-1"></i> Ýþlemde
                                            </span>
                                            break;
                                        case RequestStatus.Completed:
                                            <span class="badge badge-soft-success fs-11">
                                                <i class="ri-check-double-line align-bottom me-1"></i> Tamamlandý
                                            </span>
                                            break;
                                        case RequestStatus.Cancelled:
                                            <span class="badge badge-soft-danger fs-11">
                                                <i class="ri-close-line align-bottom me-1"></i> Ýptal
                                            </span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Talep Bilgileri -->
                                <div class="col-lg-6">
                                    <div class="table-responsive">
                                        <table class="table table-borderless table-nowrap align-middle mb-0">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <span class="fw-semibold">Ürün:</span>
                                                    </td>
                                                    <td>
                                                        @Model.ProductDescription
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span class="fw-semibold">Miktar:</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info-subtle text-info">@Model.Quantity adet</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span class="fw-semibold">Þantiye:</span>
                                                    </td>
                                                    <td>
                                                        @Model.SiteName
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span class="fw-semibold">Talep Eden:</span>
                                                    </td>
                                                    <td>
                                                        @Model.EmployeeName
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span class="fw-semibold">Talep Tarihi:</span>
                                                    </td>
                                                    <td>
                                                        @Model.RequestDate.ToString("dd.MM.yyyy HH:mm")
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span class="fw-semibold">Ýstenen Teslimat:</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary-subtle text-primary">
                                                            @switch (Model.DeliveryType)
                                                            {
                                                                case DeliveryType.TodayPickup:
                                                                    <text>Bugün araç gönderip aldýracaðým</text>
                                                                    break;
                                                                case DeliveryType.SameDayDelivery:
                                                                    <text>Gün içi siz sevk edin</text>
                                                                    break;
                                                                case DeliveryType.NextDayDelivery:
                                                                    <text>Yarýn siz sevk edin</text>
                                                                    break;
                                                                case DeliveryType.BusinessDays1to2:
                                                                    <text>1-2 iþ günü</text>
                                                                    break;
                                                            }
                                                        </span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <!-- Ek Bilgiler -->
                                <div class="col-lg-6">
                                    <div class="card border-0 shadow-none">
                                        <div class="card-header bg-light">
                                            <h6 class="card-title mb-0">Teklif Verme Rehberi</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="alert alert-info border-0">
                                                <div class="d-flex">
                                                    <div class="flex-shrink-0 me-3">
                                                        <i class="ri-information-line display-6"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <h6 class="alert-heading">Dikkat Edilmesi Gerekenler:</h6>
                                                        <ul class="mb-0">
                                                            <li>Ürün kalitesini ve markasýný belirtiniz</li>
                                                            <li>Teslimat süresini gerçekçi hesaplayýnýz</li>
                                                            <li>Fiyatlandýrmanýzý dikkatli yapýnýz</li>
                                                            <li>Açýklamayý detaylý yazýnýz</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Açýklama -->
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mt-4">
                                    <h6 class="text-muted mb-3">Talep Açýklamasý:</h6>
                                    <div class="border rounded p-3 bg-light">
                                        <p class="text-muted mb-0">@Model.Description</p>
                                    </div>
                                </div>
                            }

                            <!-- Ýþlem Butonlarý -->
                            <div class="mt-4 hstack gap-2">
                                <a href="@Url.Action("AvailableRequests")" class="btn btn-secondary">
                                    <i class="ri-arrow-left-line align-bottom me-1"></i> Geri Dön
                                </a>
                                
                                @if (Model.Status == RequestStatus.Open)
                                {
                                    <a href="@Url.Action("CreateOffer", new { requestId = Model.Id })" class="btn btn-primary">
                                        <i class="ri-add-circle-line align-bottom me-1"></i> Teklif Ver
                                    </a>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-secondary" disabled>
                                        <i class="ri-lock-line align-bottom me-1"></i> Bu Talebe Teklif Verilemez
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-xxl-3">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex">
                                <h5 class="card-title flex-grow-1 mb-0">Talep Özeti</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-shrink-0 me-3">
                                    <div class="avatar-sm">
                                        <div class="avatar-title bg-light text-primary rounded fs-3">
                                            <i class="ri-building-2-line"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@Model.SiteName</h6>
                                    <p class="text-muted mb-0">@Model.EmployeeName</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-shrink-0 me-3">
                                    <div class="avatar-sm">
                                        <div class="avatar-title bg-light text-success rounded fs-3">
                                            <i class="ri-product-hunt-line"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@Model.ProductDescription</h6>
                                    <p class="text-muted mb-0">@Model.Quantity adet</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-shrink-0 me-3">
                                    <div class="avatar-sm">
                                        <div class="avatar-title bg-light text-info rounded fs-3">
                                            <i class="ri-truck-line"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Teslimat</h6>
                                    <p class="text-muted mb-0">
                                        @switch (Model.DeliveryType)
                                        {
                                            case DeliveryType.TodayPickup:
                                                <text>Bugün Alýnacak</text>
                                                break;
                                            case DeliveryType.SameDayDelivery:
                                                <text>Gün Ýçi</text>
                                                break;
                                            case DeliveryType.NextDayDelivery:
                                                <text>Yarýn</text>
                                                break;
                                            case DeliveryType.BusinessDays1to2:
                                                <text>1-2 Ýþ Günü</text>
                                                break;
                                        }
                                    </p>
                                </div>
                            </div>

                            @if (Model.Status == RequestStatus.Open)
                            {
                                <div class="alert alert-success border-0 mt-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0 me-3">
                                            <i class="ri-check-circle-line fs-16"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="alert-heading fs-14">Bu talebe teklif verebilirsiniz!</h6>
                                            <p class="mb-0 fs-12">Talep açýk durumda ve teklif bekliyor.</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning border-0 mt-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0 me-3">
                                            <i class="ri-alert-line fs-16"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="alert-heading fs-14">Bu talebe teklif verilemez</h6>
                                            <p class="mb-0 fs-12">Talep artýk açýk durumda deðil.</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>