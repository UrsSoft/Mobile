@model IEnumerable<SantiyeTalepWebUI.Models.DTOs.OfferDto>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle table-nowrap mb-0">
            <thead class="table-light">
                <tr>
                    <th>Talep Bilgisi</th>
                    <th>Teklif Detaylarý</th>
                    <th>Fiyat Bilgisi</th>
                    <th>Teslimat</th>
                    <th>Durum</th>
                    <th>Tarih</th>
                    <th class="text-center">Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0 me-3">
                                    <div class="avatar-sm">
                                        <div class="avatar-title bg-light text-primary rounded fs-3">
                                            <i class="ri-product-hunt-line"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@offer.RequestTitle</h6>
                                    <p class="text-muted mb-0 fs-12">Talep #@offer.RequestId</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div>
                                <h6 class="mb-1">@offer.Brand</h6>
                                <p class="text-muted mb-1 text-truncate" style="max-width: 200px;" title="@offer.Description">
                                    @offer.Description
                                </p>
                                <span class="badge bg-info-subtle text-info">@offer.Quantity adet</span>
                            </div>
                        </td>
                        <td>
                            <div>
                                <h6 class="mb-1">@offer.FinalPrice.ToString("C")</h6>
                                <div class="text-muted fs-12">
                                    <small>Birim: @offer.Price.ToString("C")</small>
                                    @if (offer.Discount > 0)
                                    {
                                        <br><small class="text-success">Ýskonto: %@offer.Discount (@offer.DiscountAmount.ToString("C"))</small>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-secondary-subtle text-secondary">
                                @offer.DeliveryTypeText
                            </span>
                            @if (offer.DeliveryDays > 0)
                            {
                                <br><small class="text-muted">@offer.DeliveryDays gün</small>
                            }
                        </td>
                        <td>
                            @switch (offer.Status)
                            {
                                case OfferStatus.Pending:
                                    <span class="badge bg-warning-subtle text-warning">
                                        <i class="ri-time-line me-1"></i>Bekliyor
                                    </span>
                                    break;
                                case OfferStatus.Approved:
                                    <span class="badge bg-success-subtle text-success">
                                        <i class="ri-check-line me-1"></i>Onaylandý
                                    </span>
                                    break;
                                case OfferStatus.Rejected:
                                    <span class="badge bg-danger-subtle text-danger">
                                        <i class="ri-close-line me-1"></i>Reddedildi
                                    </span>
                                    break;
                            }
                        </td>
                        <td>
                            <span class="fw-medium">@offer.OfferDate.ToString("dd.MM.yyyy")</span>
                            <br><small class="text-muted">@offer.OfferDate.ToString("HH:mm")</small>
                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-soft-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="ri-more-fill align-middle"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("OfferDetails", new { id = offer.Id })">
                                            <i class="ri-eye-fill align-bottom me-2 text-muted"></i>
                                            Detaylarý Görüntüle
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("RequestDetails", new { id = offer.RequestId })">
                                            <i class="ri-file-list-3-line align-bottom me-2 text-muted"></i>
                                            Talep Detaylarý
                                        </a>
                                    </li>
                                    @if (offer.Status == OfferStatus.Pending)
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#" onclick="withdrawOffer(@offer.Id)">
                                                <i class="ri-delete-bin-5-line align-bottom me-2"></i>
                                                Teklifi Geri Çek
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="avatar-lg mx-auto mb-4">
            <div class="avatar-title bg-light rounded-circle display-4 text-muted">
                <i class="ri-file-list-line"></i>
            </div>
        </div>
        <h5>Bu kategoride teklif bulunmuyor</h5>
        <p class="text-muted">
            Henüz bu durumda bir teklif bulunmamaktadýr.
        </p>
        <a href="@Url.Action("AvailableRequests")" class="btn btn-primary">
            <i class="ri-add-line align-middle"></i> Yeni Teklif Ver
        </a>
    </div>
}

<script>
    function withdrawOffer(offerId) {
        Swal.fire({
            title: 'Teklifi Geri Çek',
            text: 'Bu teklifi geri çekmek istediðinizden emin misiniz? Bu iþlem geri alýnamaz.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Geri Çek',
            cancelButtonText: 'Ýptal'
        }).then((result) => {
            if (result.isConfirmed) {
                // AJAX call to withdraw offer
                fetch(`/Supplier/WithdrawOffer/${offerId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Baþarýlý!', 'Teklif baþarýyla geri çekildi.', 'success')
                        .then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Hata!', data.message || 'Bir hata oluþtu.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Hata!', 'Bir hata oluþtu.', 'error');
                });
            }
        });
    }
</script>