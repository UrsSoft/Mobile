    <!-- Employee Notifications Script -->
    <script>
        // Global variables for notification management
        let notifications = [];
        let notificationSummary = null;
        let notificationCheckInterval = null;

        // Initialize notifications when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadNotificationSummary();
            loadNotifications();
            
            // Start periodic check for new notifications every 60 seconds
            startNotificationCheck();
        });

        // Start periodic notification check
        function startNotificationCheck() {
            // Clear existing interval if any
            if (notificationCheckInterval) {
                clearInterval(notificationCheckInterval);
            }
            
            // Check for new notifications every 60 seconds
            notificationCheckInterval = setInterval(() => {
                loadNotificationSummary();
                loadNotifications();
            }, 60000); // 60 seconds
        }

        // Load notification summary
        async function loadNotificationSummary() {
            try {
                const response = await fetch('/Employee/GetNotificationSummary');
                const result = await response.json();
                
                if (result.success && result.data) {
                    notificationSummary = result.data;
                    updateNotificationBadge();
                }
            } catch (error) {
                console.error('Error loading notification summary:', error);
            }
        }

        // Load notifications
        async function loadNotifications() {
            try {
                const response = await fetch('/Employee/GetNotifications');
                const result = await response.json();
                
                if (result.success && result.data) {
                    notifications = result.data;
                    displayNotifications();
                }
            } catch (error) {
                console.error('Error loading notifications:', error);
                showNotificationsError();
            }
        }

        // Update notification badge
        function updateNotificationBadge() {
            const badge = document.getElementById('notification-badge');
            const count = document.getElementById('notification-count');
            const totalCount = document.getElementById('notification-total-count');
            
            if (notificationSummary && notificationSummary.unreadCount > 0) {
                badge.style.display = 'block';
                count.textContent = notificationSummary.unreadCount;
                totalCount.textContent = notificationSummary.totalCount || notificationSummary.unreadCount;
            } else {
                badge.style.display = 'none';
                totalCount.textContent = notificationSummary ? notificationSummary.totalCount : 0;
            }
        }

        // Display notifications
        function displayNotifications() {
            const container = document.getElementById('notifications-container');
            
            if (!notifications || notifications.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <div class="avatar-sm mx-auto mb-3">
                            <span class="avatar-title bg-info-subtle text-info fs-18 rounded-circle">
                                <i class="bx bx-bell"></i>
                            </span>
                        </div>
                        <h6 class="fs-13 text-muted">Henüz bildirim yok</h6>
                        <p class="text-muted mb-0 fs-12">Yeni bildirimler burada görünecektir.</p>
                    </div>`;
                return;
            }

            let html = '';
            notifications.slice(0, 10).forEach(notification => {
                const iconClass = getNotificationIcon(notification.type);
                const iconColor = notification.isRead ? 'text-muted' : 'text-primary';
                const bgClass = notification.isRead ? '' : 'bg-light';
                const date = new Date(notification.createdDate).toLocaleDateString('tr-TR');
                
                html += `
                    <div class="text-reset notification-item d-block dropdown-item position-relative ${bgClass}" 
                         style="cursor: pointer;" 
                         onclick="handleNotificationClick(${notification.id}, ${notification.requestId || 'null'})">
                        <div class="d-flex">
                            <div class="avatar-xs me-3 flex-shrink-0">
                                <span class="avatar-title bg-info-subtle ${iconColor} rounded-circle fs-16">
                                    <i class="${iconClass}"></i>
                                </span>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mt-0 mb-1 fs-13 fw-semibold">${notification.title}</h6>
                                <div class="fs-12 text-muted">
                                    <p class="mb-1">${notification.message}</p>
                                </div>
                                <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                    <span><i class="mdi mdi-clock-outline"></i> ${date}</span>
                                </p>
                            </div>
                        </div>
                    </div>`;
            });
            
            container.innerHTML = html;
        }

        // Get notification icon based on type
        function getNotificationIcon(type) {
            switch(type) {
                case 4: return 'bx bx-check-circle';  // RequestApproved
                case 5: return 'bx bx-x-circle'; // RequestRejected
                case 9: return 'bx bx-time'; // RequestStatusChanged
                default: return 'bx bx-bell';
            }
        }

        // Show notifications error
        function showNotificationsError() {
            const container = document.getElementById('notifications-container');
            container.innerHTML = `
                <div class="text-center py-4">
                    <div class="avatar-sm mx-auto mb-3">
                        <span class="avatar-title bg-danger-subtle text-danger fs-18 rounded-circle">
                            <i class="bx bx-error"></i>
                        </span>
                    </div>
                    <h6 class="fs-13 text-muted">Bildirimler yüklenemedi</h6>
                    <p class="text-muted mb-0 fs-12">Lütfen sayfayı yenileyin.</p>
                </div>`;
        }

        // Toggle notifications dropdown
        function toggleNotifications() {
            loadNotifications();
        }

        // Handle notification click
        async function handleNotificationClick(notificationId, requestId) {
            try {
                // Mark as read
                await fetch('/Employee/MarkNotificationAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(notificationId)
                });

                // Navigate if there's a request ID
                if (requestId && requestId !== 'null') {
                    window.location.href = `/Employee/RequestDetails/${requestId}`;
                } else {
                    // Refresh notifications
                    loadNotifications();
                    loadNotificationSummary();
                }
            } catch (error) {
                console.error('Error handling notification click:', error);
            }
        }
    </script>
    
