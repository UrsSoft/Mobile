                        body.classList.toggle('sidebar-enable');
                        
                        if (body.classList.contains('sidebar-enable')) {
                            document.querySelector('.vertical-overlay').classList.add('show');
                        } else {
                            document.querySelector('.vertical-overlay').classList.remove('show');
                        }
                    } else {
                        // Desktop view - toggle sidebar size
                        body.classList.toggle('vertical-sidebar-enable');
                        
                        if (body.hasAttribute('data-sidebar-size')) {
                            if (body.getAttribute('data-sidebar-size') === 'lg') {
                                body.setAttribute('data-sidebar-size', 'sm');
                            } else {
                                body.setAttribute('data-sidebar-size', 'lg');
                            }
                        }
                    }
                });
            }
            
            // Vertical hover button
            if (verticalHoverBtn) {
                verticalHoverBtn.addEventListener('click', function() {
                    if (body.getAttribute('data-sidebar-size') === 'sm-hover') {
                        body.setAttribute('data-sidebar-size', 'sm-hover-active');
                    } else if (body.getAttribute('data-sidebar-size') === 'sm-hover-active') {
                        body.setAttribute('data-sidebar-size', 'sm-hover');
                    } else {
                        body.setAttribute('data-sidebar-size', 'sm-hover');
                    }
                });
            }
            
            // Overlay click - close sidebar on mobile
            const overlay = document.querySelector('.vertical-overlay');
            if (overlay) {
                overlay.addEventListener('click', function() {
                    body.classList.remove('sidebar-enable');
                    this.classList.remove('show');
                });
            }
            
            // Close sidebar when window is resized to desktop
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 1025) {
                    body.classList.remove('sidebar-enable');
                    document.querySelector('.vertical-overlay').classList.remove('show');
                }
            });
            
            // Menu collapse functionality
            const menuLinks = document.querySelectorAll('[data-bs-toggle="collapse"]');
            menuLinks.forEach(function(link) {
                link.addEventListener('click', function(e) {
                    const target = this.getAttribute('href');
                    const targetElement = document.querySelector(target);
                    
                    if (targetElement) {
                        e.preventDefault();
                        
                        // Close other open menus
                        const openMenus = document.querySelectorAll('.menu-dropdown.show');
                        openMenus.forEach(function(menu) {
                            if (menu !== targetElement) {
                                menu.classList.remove('show');
                                const menuLink = document.querySelector(`[href="#${menu.id}"]`);
                                if (menuLink) {
                                    menuLink.setAttribute('aria-expanded', 'false');
                                    menuLink.classList.add('collapsed');
                                }
                            }
                        });
                        
                        // Toggle current menu
                        targetElement.classList.toggle('show');
                        this.setAttribute('aria-expanded', targetElement.classList.contains('show'));
                        this.classList.toggle('collapsed', !targetElement.classList.contains('show'));
                    }
                });
            });
            
            // Set active menu item based on current URL
            const currentPath = window.location.pathname;
            const menuItems = document.querySelectorAll('.navbar-nav .nav-link');
            
            menuItems.forEach(function(item) {
                const href = item.getAttribute('href');
                if (href && currentPath.includes(href) && href !== '#') {
                    item.classList.add('active');
                    
                    // If it's in a submenu, expand the parent
                    const parentCollapse = item.closest('.menu-dropdown');
                    if (parentCollapse) {
                        parentCollapse.classList.add('show');
                        const parentLink = document.querySelector(`[href="#${parentCollapse.id}"]`);
                        if (parentLink) {
                            parentLink.setAttribute('aria-expanded', 'true');
                            parentLink.classList.remove('collapsed');
                        }
                    }
                }
            });
            
            // Back to top button
            const backToTopBtn = document.getElementById('back-to-top');
            if (backToTopBtn) {
                window.addEventListener('scroll', function() {
                    if (window.pageYOffset > 300) {
                        backToTopBtn.style.display = 'block';
                    } else {
                        backToTopBtn.style.display = 'none';
                    }
                });
            }
            
            // Fullscreen toggle
            const fullscreenBtn = document.querySelector('[data-toggle="fullscreen"]');
            if (fullscreenBtn) {
                fullscreenBtn.addEventListener('click', function() {
                    if (!document.fullscreenElement) {
                        document.documentElement.requestFullscreen().catch(err => {
                            console.log('Fullscreen error:', err);
                        });
                    } else {
                        if (document.exitFullscreen) {
                            document.exitFullscreen();
                        }
                    }
                });
            }
            
            // Light/Dark mode toggle
            const lightDarkBtn = document.querySelector('.light-dark-mode');
            if (lightDarkBtn) {
                lightDarkBtn.addEventListener('click', function() {
                    const currentTheme = body.getAttribute('data-layout-mode');
                    if (currentTheme === 'dark') {
                        body.setAttribute('data-layout-mode', 'light');
                        body.setAttribute('data-topbar', 'light');
                        body.setAttribute('data-sidebar', 'light');
                        localStorage.setItem('data-layout-mode', 'light');
                    } else {
                        body.setAttribute('data-layout-mode', 'dark');
                        body.setAttribute('data-topbar', 'dark');
                        body.setAttribute('data-sidebar', 'dark');
                        localStorage.setItem('data-layout-mode', 'dark');
                    }
                });
                
                // Load saved theme
                const savedTheme = localStorage.getItem('data-layout-mode');
                if (savedTheme) {
                    body.setAttribute('data-layout-mode', savedTheme);
                    body.setAttribute('data-topbar', savedTheme);
                    body.setAttribute('data-sidebar', savedTheme);
                }
            }
        });
        
        // Back to top function
        function topFunction() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }
    </script>

    @RenderSection("Scripts",false)
</body>

