    <!-- Supplier Notifications Script -->
    <script>
        // Global variables for notification management
        let notifications = [];
        let notificationSummary = null;
        let notificationCheckInterval = null;

        // Initialize notifications when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadNotificationSummary();
            loadNotifications();
            
            // Start periodic check for new notifications every 60 seconds
            startNotificationCheck();
        });

        // Start periodic notification check
        function startNotificationCheck() {
            // Clear existing interval if any
            if (notificationCheckInterval) {
                clearInterval(notificationCheckInterval);
            }
            
            // Check for new notifications every 60 seconds
            notificationCheckInterval = setInterval(() => {
                loadNotificationSummary();
                loadNotifications();
            }, 60000); // 60 seconds
        }

        // Load notification summary
        async function loadNotificationSummary() {
            try {
                const response = await fetch('/Supplier/GetNotificationSummary');
                const result = await response.json();
                
                if (result.success && result.data) {
                    notificationSummary = result.data;
                    updateNotificationBadge();
                }
            } catch (error) {
                console.error('Error loading notification summary:', error);
            }
        }

        // Load notifications
        async function loadNotifications() {
            try {
                const response = await fetch('/Supplier/GetNotifications');
                const result = await response.json();
                
                if (result.success && result.data) {
                    notifications = result.data;
                    displayNotifications();
                }
            } catch (error) {
                console.error('Error loading notifications:', error);
                showNotificationsError();
            }
        }

        // Update notification badge
        function updateNotificationBadge() {
            const badge = document.getElementById('notification-badge');
            const count = document.getElementById('notification-count');
            
            if (notificationSummary && notificationSummary.unreadCount > 0) {
                badge.style.display = 'block';
                count.textContent = notificationSummary.unreadCount;
            } else {
                badge.style.display = 'none';
            }
        }

        // Display notifications
        function displayNotifications() {
            const container = document.getElementById('notifications-container');
            console.log(notifications)
            if (!notifications || notifications.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="ri-notification-line display-4 text-muted mb-3"></i>
                        <h6 class="text-muted">Henüz bildirim yok</h6>
                        <p class="text-muted mb-0">Yeni talepler geldiðinde burada bildirim alacaksýnýz.</p>
                    </div>`;
                return;
            }

            let html = '';
            notifications.forEach(notification => {
                const isRead = notification.isRead;
                const typeIcon = getNotificationIcon(notification.type);
                const typeColor = getNotificationColor(notification.type);
                const timeAgo = getTimeAgo(notification.createdDate);
                
                html += `
                    <div class="text-reset notification-item d-block dropdown-item position-relative ${isRead ? '' : 'unread-notification'}" 
                         onclick="markAsReadAndNavigate(${notification.id}, ${notification.type}, ${notification.requestId || 'null'}, ${notification.offerId || 'null'}, ${notification.supplierId || 'null'})">
                        <div class="d-flex">
                            <div class="avatar-xs me-3">
                                <span class="avatar-title bg-${typeColor}-subtle text-${typeColor} rounded-circle fs-16">
                                    <i class="${typeIcon}"></i>
                                </span>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mt-0 mb-1 fs-13 fw-semibold ${isRead ? 'text-muted' : ''}">${notification.title}</h6>
                                <div class="fs-13 text-muted">
                                    <p class="mb-1">${notification.message}</p>
                                </div>
                                <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                    <span><i class="mdi mdi-clock-outline"></i> ${timeAgo}</span>
                                    ${!isRead ? '<span class="badge bg-primary ms-2">Yeni</span>' : ''}
                                </p>
                            </div>
                        </div>
                    </div>`;
            });
            
            container.innerHTML = html;
        }

        // Get notification icon based on type
        function getNotificationIcon(type) {
            switch(type) {
                case 10: // RequestSentToSupplier
                    return 'ri-send-plane-line';
                case 3: // NewOffer
                    return 'ri-price-tag-3-line';
                case 6: // OfferApproved
                    return 'ri-check-line';
                case 7: // OfferRejected
                    return 'ri-close-line';
                default:
                    return 'ri-notification-line';
            }
        }

        // Get notification color based on type
        function getNotificationColor(type) {
            switch(type) {
                case 10: // RequestSentToSupplier
                    return 'info';
                case 3: // NewOffer
                    return 'warning';
                case 6: // OfferApproved
                    return 'success';
                case 7: // OfferRejected
                    return 'danger';
                default:
                    return 'primary';
            }
        }

        // Get time ago string
        function getTimeAgo(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMins / 60);
            const diffDays = Math.floor(diffHours / 24);
            
            if (diffMins < 1) return 'Az önce';
            if (diffMins < 60) return `${diffMins} dakika önce`;
            if (diffHours < 24) return `${diffHours} saat önce`;
            if (diffDays < 7) return `${diffDays} gün önce`;
            
            return date.toLocaleDateString('tr-TR');
        }

        // Show error message in notifications
        function showNotificationsError() {
            const container = document.getElementById('notifications-container');
            container.innerHTML = `
                <div class="text-center py-4">
                    <i class="ri-error-warning-line display-4 text-danger mb-3"></i>
                    <h6 class="text-danger">Hata</h6>
                    <p class="text-muted mb-2">Bildirimler yüklenirken bir hata oluþtu.</p>
                    <button class="btn btn-sm btn-outline-primary" onclick="loadNotifications()">
                        <i class="ri-refresh-line me-1"></i>Yeniden Dene
                    </button>
                </div>`;
        }

        // Toggle notifications dropdown
        function toggleNotifications() {
            const dropdown = document.getElementById('notification-dropdown');
            const isVisible = dropdown.classList.contains('show');
            
            if (!isVisible) {
                // Load fresh notifications when opening
                loadNotifications();
                loadNotificationSummary();
            }
        }

        // Mark notification as read and navigate
        async function markAsReadAndNavigate(notificationId, type, requestId, offerId, supplierId) {
            try {
                // Mark as read
                const notification = notifications.find(n => n.id === notificationId);
                if (notification && !notification.isRead) {
                    await fetch('/Supplier/MarkNotificationAsRead', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(notificationId)
                    });
                    
                    // Update local state
                    notification.isRead = true;
                    displayNotifications();
                    loadNotificationSummary();
                }
                
                // Navigate based on notification type
                let targetUrl = '/Supplier/Dashboard';
                
                switch(type) {
                    case 10: // RequestSentToSupplier
                        targetUrl = '/Supplier/AvailableRequests';
                        break;
                    case 3: // NewOffer (this shouldn't happen for suppliers but just in case)
                        targetUrl = '/Supplier/Offers';
                        break;
                    case 6: // OfferApproved
                    case 7: // OfferRejected
                        targetUrl = '/Supplier/Offers';
                        break;
                    case 11: // ExcelRequestAssigned
                        targetUrl = '/Supplier/ExcelRequests';
                        break;
                }
                
                // Navigate to the target page
                window.location.href = targetUrl;
                
            } catch (error) {
                console.error('Error marking notification as read:', error);
                // Still navigate even if marking as read fails
                window.location.href = '/Supplier/Dashboard';
            }
        }

        // Mark all notifications as read
        async function markAllAsRead() {
            const unreadNotifications = notifications.filter(n => !n.isRead);
            
            if (unreadNotifications.length === 0) {
                toastr.info('Zaten tüm bildirimler okunmuþ durumda');
                return;
            }

            try {
                const response = await fetch('/Supplier/MarkAllNotificationsAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Update local notifications
                    notifications.forEach(n => n.isRead = true);
                    
                    // Update display
                    displayNotifications();
                    loadNotificationSummary();
                    
                    toastr.success(`${unreadNotifications.length} bildirim okundu olarak iþaretlendi`);
                } else {
                    toastr.error('Bildirimler güncellenirken hata oluþtu');
                }
            } catch (error) {
                console.error('Error marking all as read:', error);
                toastr.error('Bildirimler güncellenirken hata oluþtu');
            }
        }

        // Add CSS for unread notifications
        const style = document.createElement('style');
        style.textContent = `
            .unread-notification {
                background-color: #f8f9fa !important;
                border-left: 3px solid #0ab39c !important;
            }
            .unread-notification:hover {
                background-color: #e9ecef !important;
            }
        `;
        document.head.appendChild(style);

        // Clean up interval on page unload
        window.addEventListener('beforeunload', function() {
            if (notificationCheckInterval) {
                clearInterval(notificationCheckInterval);
            }
        });
    </script>
    
