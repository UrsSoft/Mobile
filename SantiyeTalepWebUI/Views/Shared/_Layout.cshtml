    <!-- Admin Notifications Script (Global for Layout) -->
    <script>
        // Global variables for notification management
        let notifications = [];
        let notificationSummary = null;
        let notificationCheckInterval = null;

        // Initialize notifications when page loads
               document.addEventListener('DOMContentLoaded', function() {
            console.log('Layout: Initializing notifications');
            loadNotificationSummary();
            loadNotifications();

            // Start periodic check for new notifications every 60 seconds
            startNotificationCheck();

            // 🔔 Okunmamış bildirim hatırlatmasını başlat
            setTimeout(() => {
                checkAndRemindUnreadNotifications(); // İlk kontrolü yap
                startUnreadNotificationReminder(); // Periyodik kontrolü başlat
            }, 5000); // 5 saniye sonra başla (sayfa yüklenmesini bekle)
        });

        // Start periodic notification check
               // Start periodic notification check
        function startNotificationCheck() {
            // Clear existing interval if any
            if (notificationCheckInterval) {
                clearInterval(notificationCheckInterval);
            }

            // Check for new notifications every 60 seconds
            notificationCheckInterval = setInterval(() => {
                console.log('Layout: Periodic notification check');
                loadNotificationSummary();
                loadNotifications();
            }, 60000); // 60 seconds
        }

        // 🔔 OKUNMAMIŞ BİLDİRİM HATIRLATMA SİSTEMİ
        let unreadReminderInterval = null;

        function startUnreadNotificationReminder() {
            // Mevcut interval'i temizle
            if (unreadReminderInterval) {
                clearInterval(unreadReminderInterval);
            }

            // 15 saniyede bir kontrol et
            unreadReminderInterval = setInterval(() => {
                checkAndRemindUnreadNotifications();
            }, 15000); // 15 saniye

            console.log('✅ Okunmamış bildirim hatırlatma sistemi başlatıldı (15 saniye)');
        }

        function stopUnreadNotificationReminder() {
            if (unreadReminderInterval) {
                clearInterval(unreadReminderInterval);
                unreadReminderInterval = null;
                console.log('⏹️ Okunmamış bildirim hatırlatma sistemi durduruldu');
            }
        }

        async function checkAndRemindUnreadNotifications() {
            try {
                const response = await fetch('/Admin/GetNotificationSummary');
                const result = await response.json();

                if (result.success && result.data) {
                    const unreadCount = result.data.unreadCount || 0;

                    console.log(`🔍 Okunmamış bildirim kontrolü: ${unreadCount} adet`);

                    if (unreadCount > 0) {
                        // Ses çal
                        playNotificationSound();

                        // Toastr bildirimi göster
                        const message = unreadCount === 1
                            ? '1 okunmamış bildiriminiz var!'
                            : `${unreadCount} okunmamış bildiriminiz var!`;

                        toastr.warning(message, '🔔 Hatırlatma', {
                            timeOut: 5000,
                            extendedTimeOut: 2000,
                            closeButton: true,
                            progressBar: true,
                            onclick: function() {
                                // Bildirim dropdown'ını aç
                                const notificationDropdown = document.getElementById('page-header-notifications-dropdown');
                                if (notificationDropdown) {
                                    notificationDropdown.click();
                                }
                            }
                        });

                        console.log('🔔 Hatırlatma bildirimi gönderildi');
                    } else {
                        // Okunmamış bildirim yoksa hatırlatmayı durdur
                        console.log('✅ Tüm bildirimler okundu, hatırlatma durduruluyor');
                        stopUnreadNotificationReminder();
                    }
                }
            } catch (error) {
                console.error('❌ Hatırlatma kontrolü hatası:', error);
            }
        }


        // Load notification summary
        async function loadNotificationSummary() {
            try {
                console.log('Layout: Loading notification summary');
                const response = await fetch('/Admin/GetNotificationSummary');
                const result = await response.json();

                console.log('Layout: Notification summary response:', result);

                if (result.success && result.data) {
                    notificationSummary = result.data;
                    console.log('Layout: Notification summary loaded:', notificationSummary);
                    updateNotificationBadge();
                } else {
                    console.warn('Layout: Failed to load notification summary:', result);
                }
            } catch (error) {
                console.error('Layout: Error loading notification summary:', error);
            }
        }

                async function loadNotifications() {
            try {
                console.log('Layout: Loading notifications');

                // ✅ Backend'den SADECE okunmamış bildirimleri çek
                const response = await fetch('/Admin/GetNotifications?unreadOnly=true');
                const result = await response.json();

                console.log('Layout: Notifications response:', result);

                if (result.success && result.data) {
                    const newNotifications = result.data; // Artık filtrelemeye gerek yok

                    // 🔊 YENİ BİLDİRİM VARSA SES ÇAL
                    const oldUnreadCount = notifications.length;
                    const newUnreadCount = newNotifications.length;

                    // Eğer okunmamış bildirim sayısı arttıysa
                    if (newUnreadCount > oldUnreadCount && oldUnreadCount >= 0) {
                        console.log('🔔 Yeni bildirim geldi! Ses çalınıyor...');
                        playNotificationSound();

                        // Toastr bildirimi göster
                        toastr.info('Yeni bildiriminiz var!', 'Bildirim', {
                            timeOut: 3000,
                            onclick: function() {
                                toggleNotifications();
                            }
                        });
                    }

                    notifications = newNotifications;
                    console.log('Layout: Unread notifications loaded, count:', notifications.length);
                    displayNotifications();
                } else {
                    console.warn('Layout: Failed to load notifications:', result);
                    showNotificationsError();
                }
            } catch (error) {
                console.error('Layout: Error loading notifications:', error);
                showNotificationsError();
            }
        }


        // Update notification badge
        function updateNotificationBadge() {
            const badge = document.getElementById('notification-badge');
            const count = document.getElementById('notification-count');
            const totalCount = document.getElementById('notification-total-count');

            console.log('Layout: Updating notification badge, summary:', notificationSummary);

            if (notificationSummary && notificationSummary.unreadCount > 0) {
                badge.style.display = 'block';
                count.textContent = notificationSummary.unreadCount;
                totalCount.textContent = notificationSummary.totalCount || notificationSummary.unreadCount;
                console.log('Layout: Badge shown with unread count:', notificationSummary.unreadCount);
            } else {
                badge.style.display = 'none';
                totalCount.textContent = notificationSummary ? notificationSummary.totalCount : 0;
                console.log('Layout: Badge hidden, no unread notifications');
            }
        }

                // Display notifications
        function displayNotifications() {
            const container = document.getElementById('notifications-container');
            console.log('Layout: Displaying notifications, count:', notifications ? notifications.length : 0);

            // Sadece okunmamış bildirimleri göster
            const unreadNotifications = notifications.filter(n => !n.isRead);

            if (!unreadNotifications || unreadNotifications.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <div class="avatar-sm mx-auto mb-3">
                            <span class="avatar-title bg-success-subtle text-success fs-18 rounded-circle">
                                <i class="bx bx-check-circle"></i>
                            </span>
                        </div>
                        <h6 class="fs-13 text-muted">Tüm bildirimler okundu</h6>
                        <p class="text-muted mb-0 fs-12">Yeni bildirimler geldiğinde burada görünecektir.</p>
                    </div>`;
                return;
            }

            let html = '';
            unreadNotifications.slice(0, 10).forEach(notification => {
                const iconClass = getNotificationIcon(notification.type);
                const date = new Date(notification.createdDate).toLocaleDateString('tr-TR', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                html += `
                    <div class="text-reset notification-item d-block dropdown-item position-relative bg-light"
                         style="cursor: pointer;"
                         data-notification-id="${notification.id}"
                         onclick="goToRelatedPage(${notification.type}, ${notification.requestId || 'null'}, ${notification.offerId || 'null'}, ${notification.supplierId || 'null'}, ${notification.id})">
                        <div class="d-flex">
                            <div class="avatar-xs me-3 flex-shrink-0">
                                <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-16">
                                    <i class="${iconClass}"></i>
                                </span>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-1">
                                    <h6 class="mt-0 mb-0 fs-13 fw-semibold flex-grow-1">${notification.title}</h6>
                                    <span class="badge bg-primary ms-2">Yeni</span>
                                </div>
                                <div class="fs-12 text-muted">
                                    <p class="mb-1">${notification.message}</p>
                                </div>
                                <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                    <span><i class="mdi mdi-clock-outline"></i> ${date}</span>
                                </p>
                            </div>
                        </div>
                    </div>`;
            });

            container.innerHTML = html;
            console.log('Layout: Unread notifications displayed:', unreadNotifications.length);
        }


        // Get notification icon based on type
        function getNotificationIcon(type) {
            switch(type) {
                case 1: return 'bx bx-user-plus';  // SupplierRegistration
                case 2: return 'bx bx-shopping-bag'; // NewRequest
                case 3: return 'bx bx-purchase-tag'; // NewOffer
                case 11: return 'bx bx-file'; // ExcelRequestAssigned
                case 12: return 'bx bx-upload'; // ExcelOfferUploaded
                default: return 'bx bx-bell';
            }
        }

        // Show notifications error
        function showNotificationsError() {
            const container = document.getElementById('notifications-container');
            container.innerHTML = `
                <div class="text-center py-4">
                    <div class="avatar-sm mx-auto mb-3">
                        <span class="avatar-title bg-danger-subtle text-danger fs-18 rounded-circle">
                            <i class="bx bx-error"></i>
                        </span>
                    </div>
                    <h6 class="fs-13 text-muted">Bildirimler yüklenemedi</h6>
                    <p class="text-muted mb-0 fs-12">Lütfen sayfayı yenileyin.</p>
                </div>`;
        }

        // Toggle notifications dropdown
        function toggleNotifications() {
            console.log('Layout: Toggling notifications');
            loadNotifications();
        }
                // İlgili sayfaya git ve bildirimi okundu işaretle
        async function goToRelatedPage(type, requestId, offerId, supplierId, notificationId) {
            console.log('Layout: Going to related page, type:', type, 'notificationId:', notificationId);

            // Önce bildirimi okundu olarak işaretle
            const notification = notifications.find(n => n.id === notificationId);
            if (notification && !notification.isRead) {
                try {
                    const response = await fetch(`/Admin/MarkNotificationAsRead`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(notificationId)
                    });

                    const data = await response.json();

                    if (data.success) {
                        console.log('✅ Bildirim okundu olarak işaretlendi');

                        // ✅ Bildirimi listeden KALDIR (çünkü artık okundu)
                        notifications = notifications.filter(n => n.id !== notificationId);

                        // ✅ UI'ı güncelle
                        displayNotifications();
                        loadNotificationSummary();

                        // ✅ Dropdown'dan da kaldır
                        const notificationElement = document.querySelector(`[data-notification-id="${notificationId}"]`);
                        if (notificationElement) {
                            notificationElement.style.transition = 'opacity 0.3s';
                            notificationElement.style.opacity = '0';
                            setTimeout(() => {
                                notificationElement.remove();
                            }, 300);
                        }

                        // Okunmamış bildirim kalmadıysa hatırlatmayı durdur
                        if (notifications.length === 0) {
                            if (typeof stopUnreadNotificationReminder === 'function') {
                                stopUnreadNotificationReminder();
                            }
                        }
                    }
                } catch (error) {
                    console.error('Layout: Error marking notification as read:', error);
                }
            }

            // Sayfaya yönlendir
            let targetUrl = '/Admin/Dashboard';

            switch(type) {
                case 1: // SupplierRegistration
                    targetUrl = '/Admin/Suppliers';
                    break;
                case 2: // NewRequest
                    targetUrl = '/Admin/Requests';
                    if (requestId && requestId !== 'null') {
                        targetUrl += `?requestId=${requestId}`;
                    }
                    break;
                case 3: // NewOffer
                    targetUrl = '/Admin/Offers';
                    if (offerId && offerId !== 'null') {
                        targetUrl += `?offerId=${offerId}`;
                    }
                    break;
                case 11: // ExcelRequestAssigned
                    targetUrl = '/Admin/ExcelManagement';
                    if (requestId && requestId !== 'null') {
                        targetUrl += `?requestId=${requestId}`;
                    }
                    break;
                case 12: // ExcelOfferUploaded
                    targetUrl = '/Admin/SupplierExcelManagement';
                    if (requestId && requestId !== 'null') {
                        targetUrl += `?requestId=${requestId}`;
                    }
                    break;
                default:
                    targetUrl = '/Admin/Dashboard';
                    break;
            }

            // Kısa bir gecikme ile yönlendir
            setTimeout(() => {
                window.location.href = targetUrl;
            }, 300);
        }


       
    </script>

