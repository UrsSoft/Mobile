@model CreateRequestViewModel
@{
    ViewData["Title"] = "Yeni Talep Oluştur";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Yeni Talep Oluştur</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Employee")">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Requests", "Employee")">Taleplerim</a></li>
                                <li class="breadcrumb-item active">Yeni Talep</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row justify-content-center">
                <div class="col-xxl-6">
                    <div class="card">
                        <div class="card-header align-items-center d-flex">
                            <h4 class="card-title mb-0 flex-grow-1">
                                <i class="ri-file-add-line align-middle me-1 text-muted"></i>
                                Talep Bilgileri
                            </h4>
                        </div><!-- end card header -->

                        <div class="card-body">
                            <form asp-action="CreateRequest" method="post" class="needs-validation" novalidate>
                                @Html.AntiForgeryToken()

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label asp-for="ProductDescription" class="form-label">Ürün Açıklaması <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <input asp-for="ProductDescription" class="form-control" placeholder="Ürün adı veya açıklaması" id="productSearch" />
                                                <button type="button" class="btn btn-outline-secondary" id="searchBtn">
                                                    <i class="ri-search-line"></i> Ara
                                                </button>
                                            </div>
                                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Product Search Modal -->
                                <div class="modal fade" id="productSearchModal" tabindex="-1" aria-labelledby="productSearchModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="productSearchModalLabel">
                                                    <i class="ri-search-line me-2"></i>Ürün Arama Sonuçları
                                                </h5>
                                                <button type="button" class="btn-close" onclick="closeModal()" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div id="searchResultsModal">
                                                    <div class="text-center" id="loadingSpinner" style="display: none;">
                                                        <div class="spinner-border text-primary" role="status">
                                                            <span class="visually-hidden">Yükleniyor...</span>
                                                        </div>
                                                        <div class="mt-2">Ürünler aranıyor...</div>
                                                    </div>
                                                    <div id="productListModal"></div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" onclick="closeModal()">Kapat</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="Quantity" class="form-label">Miktar <span class="text-danger">*</span></label>
                                            <input asp-for="Quantity" type="number" class="form-control" placeholder="1" min="1" />
                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="DeliveryType" class="form-label">Teslim Tipi <span class="text-danger">*</span></label>
                                            <select asp-for="DeliveryType" class="form-select">
                                                <option value="">Teslim Tipi Seçiniz</option>
                                                <option value="@((int)SantiyeTalepWebUI.Models.DeliveryType.TodayPickup)">Bugün araç gönderip aldıracağım</option>
                                                <option value="@((int)SantiyeTalepWebUI.Models.DeliveryType.SameDayDelivery)">Gün içi siz sevk edin</option>
                                                <option value="@((int)SantiyeTalepWebUI.Models.DeliveryType.NextDayDelivery)">Yarın siz sevk edin</option>
                                                <option value="@((int)SantiyeTalepWebUI.Models.DeliveryType.BusinessDays1to2)">1-2 iş günü</option>
                                            </select>
                                            <span asp-validation-for="DeliveryType" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label asp-for="Description" class="form-label">Not <span class="text-danger">*</span></label>
                                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Talep detaylarını açıklayınız..."></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="hstack gap-2 justify-content-end">
                                            <a href="@Url.Action("Requests", "Employee")" class="btn btn-light">
                                                <i class="ri-arrow-left-line align-bottom me-1"></i> Geri Dön
                                            </a>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="ri-save-line align-bottom me-1"></i> Talep Oluştur
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div><!-- end card body -->
                    </div><!-- end card -->
                </div><!-- end col -->
            </div><!-- end row -->

        </div>
        <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Şantiye Talep Yönetim Sistemi.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Velzon Template ile geliştirilmiştir.
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

@section Scripts {
    <style>
        /* Modal styles for manual implementation */
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1055;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            overflow-y: auto;
            outline: 0;
        }

            .modal.show {
                display: block !important;
            }

        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1050;
            width: 100vw;
            height: 100vh;
            background-color: #000;
            opacity: 0.5;
        }

        body.modal-open {
            overflow: hidden;
        }
    </style>

    <script>
        // Employee site brand information - global variables
        let siteBrands = [];
        let siteInfo = null;
        let isLoadingSiteInfo = false;

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Load employee's site information and brands
        async function loadSiteInfo() {
            if (isLoadingSiteInfo) {
                console.log('Site info is already being loaded, skipping duplicate request');
                return;
            }

            isLoadingSiteInfo = true;
            console.log('Starting to load site information...');

            try {
                const response = await fetch('/Employee/GetMySiteInfo', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    credentials: 'same-origin'
                });

                console.log('Site info response status:', response.status);

                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        siteInfo = result.site;
                        siteBrands = siteInfo.brands || [];

                        console.log('Site info loaded successfully:', siteInfo);
                        console.log('Site brands loaded:', siteBrands);

                        // Update UI to show site brand information
                        updateSiteBrandInfo();
                    } else {
                        console.warn('Failed to load site information:', result.message);
                        showInfoMessage(result.message || 'Şantiye bilgileri yüklenemedi. Ürün araması tüm markalardan yapılacak.', 'warning');
                    }
                } else {
                    const errorText = await response.text();
                    console.warn('Could not load site information. Status:', response.status, 'Response:', errorText);

                    // Show warning to user
                    showInfoMessage('Şantiye bilgileri yüklenemedi. Ürün araması tüm markalardan yapılacak.', 'warning');
                }
            } catch (error) {
                console.error('Error loading site information:', error);

                // Show error to user
                showInfoMessage('Şantiye bilgileri yüklenirken hata oluştu. Ürün araması tüm markalardan yapılacak.', 'warning');
            } finally {
                isLoadingSiteInfo = false;
            }
        }

        // Show info message to user
        function showInfoMessage(message, type = 'info') {
            const alertClass = type === 'warning' ? 'alert-warning' : 'alert-info';
            const iconClass = type === 'warning' ? 'ri-alert-line' : 'ri-information-line';

            const alertDiv = document.createElement('div');
            alertDiv.className = `alert ${alertClass} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <i class="${iconClass} me-2"></i>
                ${message}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()" aria-label="Close"></button>
            `;

            const searchContainer = document.getElementById('productSearch').closest('.mb-3');
            searchContainer.insertAdjacentElement('afterend', alertDiv);

            // Auto remove after 10 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 10000);
        }

        // Update UI to show site brand information
        function updateSiteBrandInfo() {
            if (siteInfo && siteBrands.length > 0) {
                const searchContainer = document.getElementById('productSearch').closest('.mb-3');

                // Remove existing brand info if present
                const existingInfo = document.getElementById('siteBrandInfo');
                if (existingInfo) {
                    existingInfo.remove();
                }

                // Create brand info display
                // const brandInfo = document.createElement('div');
                // brandInfo.id = 'siteBrandInfo';
                // brandInfo.className = 'alert alert-success mt-2';
                // brandInfo.innerHTML = `
                //     <div class="d-flex align-items-center">
                //         <i class="ri-information-line me-2"></i>
                //         <div>
                //             <strong>${siteInfo.name}</strong> şantiyesinde kayıtlı markalar:
                //             ${siteBrands.map(brand => `<span class="badge bg-primary ms-1">${brand.name}</span>`).join('')}
                //         </div>
                //     </div>
                //     <small class="text-muted d-block mt-1">Arama sonuçları bu markalarla sınırlandırılacaktır.</small>
                // `;

                // searchContainer.appendChild(brandInfo);
            } else if (siteInfo && siteBrands.length === 0) {
                showInfoMessage(`${siteInfo.name} şantiyesinde henüz marka tanımlanmamış. Ürün araması tüm markalardan yapılacak.`, 'warning');
            }
        }

        // Product search functionality with brand filtering
        async function performProductSearch() {
            const searchTerm = document.getElementById('productSearch').value.trim();
            if (searchTerm.length < 3) {
                alert('Arama terimi en az 3 karakter olmalıdır');
                return;
            }

            // Ensure site info is loaded before searching
            if (!siteInfo && !isLoadingSiteInfo) {
                console.log('Site info not loaded, loading now...');
                await loadSiteInfo();
            }

            // Show modal
            const modalElement = document.getElementById('productSearchModal');
            modalElement.style.display = 'block';
            modalElement.classList.add('show');
            modalElement.setAttribute('aria-modal', 'true');
            modalElement.setAttribute('role', 'dialog');

            // Add backdrop
            if (!document.querySelector('.modal-backdrop')) {
                const backdrop = document.createElement('div');
                backdrop.className = 'modal-backdrop fade show';
                document.body.appendChild(backdrop);
            }

            document.body.classList.add('modal-open');

            const loadingSpinner = document.getElementById('loadingSpinner');
            const productListModal = document.getElementById('productListModal');

            // Show loading spinner
            loadingSpinner.style.display = 'block';
            productListModal.innerHTML = '';

            // Build search URL - The backend will automatically use the employee's site brands
            const searchUrl = `/Employee/SearchProducts?query=${encodeURIComponent(searchTerm)}`;

            console.log('Searching with automatic brand filtering for site brands');
            console.log('Search URL:', searchUrl);

            try {
                // Call the search API through the Employee controller (with proper authentication)
                const response = await fetch(searchUrl, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    credentials: 'same-origin'
                });

                console.log('Search API response status:', response.status);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                console.log('Search API result:', result);

                // Hide loading spinner
                loadingSpinner.style.display = 'none';

                let products = [];
                if (result.success && result.data && Array.isArray(result.data)) {
                    products = result.data;
                } else if (Array.isArray(result)) {
                    products = result;
                }

                console.log('Processed products:', products);

                if (!products || products.length === 0) {
                    const brandFilterMessage = siteBrands && siteBrands.length > 0 ?
                        `<br><small class="text-muted">Arama ${siteInfo?.name || 'şantiye'} markalarıyla sınırlandırıldı: ${siteBrands.map(b => b.name).join(', ')}</small>` : '';

                    productListModal.innerHTML = `
                        <div class="text-center text-muted py-4">
                            <i class="ri-search-line fs-1"></i>
                            <p class="mt-3">Aradığınız kriterlere uygun ürün bulunamadı.</p>
                            <small class="text-muted">Arama terimi: "${searchTerm}"${brandFilterMessage}</small>
                        </div>
                    `;
                } else {
                    // Create product table
                    let tableHtml = `
                        <div class="alert alert-success mb-3">
                            <i class="ri-check-line me-2"></i>
                            <strong>${products.length}</strong> ürün bulundu
                            ${siteBrands && siteBrands.length > 0 ?
                                ` (${siteInfo?.name || 'şantiye'} markalarına göre otomatik filtrelendi)` :
                                ''}
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ürün Açıklaması</th>
                                        <th width="100">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                    `;

                    products.forEach((product, index) => {
                        const description = product.description || product.name || product.title || '';
                        const brand = product.brand || '';

                        const safeDescription = String(description).replace(/'/g, '&#39;').replace(/"/g, '&quot;');

                        // Highlight if brand matches site brands
                        const brandBadgeClass = siteBrands && siteBrands.some(sb =>
                            sb.name.toLowerCase().includes(brand.toLowerCase()) ||
                            brand.toLowerCase().includes(sb.name.toLowerCase())
                        ) ? 'bg-success' : 'bg-secondary';

                        tableHtml += `
                            <tr>
                                <td>
                                    <div class="fw-medium">${description}</div>
                                    ${product.units && product.units.length > 0 ?
                                        `<small class="text-muted">Birim: ${product.units.join(', ')}</small>` : ''
                                    }
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm" onclick="selectProduct('${safeDescription}')">
                                        <i class="ri-add-line"></i> Seç
                                    </button>
                                </td>
                            </tr>
                        `;
                    });

                    tableHtml += `</tbody></table></div>`;
                    productListModal.innerHTML = tableHtml;
                }
            } catch (error) {
                console.error('Search error:', error);
                loadingSpinner.style.display = 'none';
                productListModal.innerHTML = `
                    <div class="text-center text-danger py-4">
                        <i class="ri-error-warning-line fs-1"></i>
                        <p class="mt-3">Arama sırasında bir hata oluştu: ${error.message}</p>
                    </div>
                `;
            }
        }

        // Function to close modal
        function closeModal() {
            const modalElement = document.getElementById('productSearchModal');
            modalElement.style.display = 'none';
            modalElement.classList.remove('show');
            modalElement.removeAttribute('aria-modal');
            modalElement.removeAttribute('role');

            const backdrop = document.querySelector('.modal-backdrop');
            if (backdrop) {
                backdrop.remove();
            }

            document.body.classList.remove('modal-open');
        }

        // Function to select a product and fill the form
        function selectProduct(description) {
            const productSearchField = document.getElementById('productSearch');
            if (productSearchField) {
                productSearchField.value = description;
            }

            closeModal();

            // Show success message
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-dismissible fade show mt-3';
            alertDiv.innerHTML = `
                <strong>✅ Ürün Seçildi:</strong> ${description}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()" aria-label="Close"></button>
            `;

            const searchContainer = document.getElementById('productSearch').closest('.mb-3');
            searchContainer.insertAdjacentElement('afterend', alertDiv);

            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 3000);
        }

        // Search button click event
        document.getElementById('searchBtn').addEventListener('click', performProductSearch);

        // Enter key support for search input
        document.getElementById('productSearch').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                performProductSearch();
            }
        });

        // Initialize when DOM is loaded
        document.addEventListener("DOMContentLoaded", function() {
            console.log('DOM loaded, initializing...');

            // Load site info when page loads
            loadSiteInfo();

            // Add click event to modal for backdrop close
            document.getElementById('productSearchModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });
        });
    </script>
}