@model SantiyeTalepWebUI.Models.DTOs.OfferListViewModel
@{
    ViewData["Title"] = "Tüm Teklifler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Pulse animation for highlighted offers */
        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }

        .pulse-animation {
            animation: pulse 1s ease-in-out 3;
        }

        .offer-highlight {
            background-color: #fff3cd !important;
            border: 2px solid #ffc107 !important;
        }
    </style>
}

<div class="main-content" data-enable-notifications="true">
    <div class="page-content">
        <div class="container-fluid">
            
            <!-- Page Title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">
                            <i class="ri-price-tag-3-line me-2"></i>Tedarikçi Teklifleri
                        </h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Dashboard</a></li>
                                <li class="breadcrumb-item active">Teklifler</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-uppercase fw-medium text-muted mb-0">Toplam Teklifler</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-primary fs-14 mb-0">
                                        <i class="ri-arrow-right-up-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-4">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4">
                                        <span class="counter-value" data-target="@Model.Offers.Count">@Model.Offers.Count</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-primary-subtle rounded fs-3">
                                        <i class="ri-price-tag-3-line text-primary"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-uppercase fw-medium text-muted mb-0">Bekleyen Teklifler</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-warning fs-14 mb-0">
                                        <i class="ri-time-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-4">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-warning">
                                        <span class="counter-value" data-target="@Model.Offers.Count(o => o.Status == OfferStatus.Pending)">@Model.Offers.Count(o => o.Status == OfferStatus.Pending)</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-warning-subtle rounded fs-3">
                                        <i class="ri-time-line text-warning"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-uppercase fw-medium text-muted mb-0">Onaylanan</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-success fs-14 mb-0">
                                        <i class="ri-check-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-4">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-success">
                                        <span class="counter-value" data-target="@Model.Offers.Count(o => o.Status == OfferStatus.Approved)">@Model.Offers.Count(o => o.Status == OfferStatus.Approved)</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-success-subtle rounded fs-3">
                                        <i class="ri-check-line text-success"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-uppercase fw-medium text-muted mb-0">Reddedilen</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-danger fs-14 mb-0">
                                        <i class="ri-close-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-4">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-danger">
                                        <span class="counter-value" data-target="@Model.Offers.Count(o => o.Status == OfferStatus.Rejected)">@Model.Offers.Count(o => o.Status == OfferStatus.Rejected)</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-danger-subtle rounded fs-3">
                                        <i class="ri-close-line text-danger"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center justify-content-between">
                                <h4 class="card-title mb-0">Tedarikçi Teklifleri</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Currency Warning -->
                            <div class="alert alert-info" role="alert">
                                <div class="d-flex">
                                    <div class="flex-shrink-0 me-3">
                                        <i class="ri-information-line fs-16"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="alert-heading">Para Birimi Uyarýsý</h5>
                                        <p class="mb-0">
                                            Teklifler farklý para birimlerinde olabilir (?, $, €, £). 
                                            Karþýlaþtýrma yaparken güncel kur deðerlerini dikkate alýnýz.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Filters -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-3">
                                    <div class="search-box">
                                        <input type="text" class="form-control search" placeholder="Teklif ara..." id="searchInput">
                                        <i class="ri-search-line search-icon"></i>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="statusFilter">
                                        <option value="">Tüm Durumlar</option>
                                        <option value="1">Bekleyen</option>
                                        <option value="2">Onaylanan</option>
                                        <option value="3">Reddedilen</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="supplierFilter">
                                        <option value="">Tüm Tedarikçiler</option>
                                        @foreach (var supplier in Model.Offers.GroupBy(o => new { o.SupplierId, o.SupplierName }).Select(g => g.Key))
                                        {
                                            <option value="@supplier.SupplierId">@supplier.SupplierName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <input type="date" class="form-control" id="dateFilter" placeholder="Tarih filtrele">
                                </div>
                            </div>

                            <!-- Offers Table -->
                            <div class="table-responsive table-card">
                                <table class="table align-middle table-nowrap" id="offersTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Talep</th>
                                            <th>Tedarikçi</th>
                                            <th>Marka</th>
                                            <th>Miktar</th>
                                            <th>Birim Fiyat</th>
                                            <th>Ýskonto</th>
                                            <th>Toplam</th>
                                            <th>Para Birimi</th>
                                            <th>Teslimat</th>
                                            <th>Durum</th>
                                            <th>Tarih</th>
                                            <th>Eylemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Offers.Any())
                                        {
                                            @foreach (var offer in Model.Offers.OrderByDescending(o => o.OfferDate))
                                            {
                                                <tr class="offer-row" data-id="@offer.Id" data-status="@((int)offer.Status)" data-supplier="@offer.SupplierId" data-date="@offer.OfferDate.ToString("yyyy-MM-dd")">
                                                    <td>
                                                        <div>
                                                            <h6 class="mb-1">#@offer.RequestId</h6>
                                                            <p class="text-muted mb-0 fs-12">@offer.RequestTitle</p>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-info-subtle text-info rounded-circle">
                                                                    @(offer.SupplierName.Substring(0, 1).ToUpper())
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">@offer.SupplierName</h6>
                                                                <small class="text-muted">@offer.CompanyName</small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-info-subtle text-info rounded-circle">
                                                                    @(offer.Brand.Substring(0, 1).ToUpper())
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">@offer.Brand</h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="fw-medium">@offer.Quantity</span>
                                                    </td>
                                                    <td>
                                                        <span class="fw-medium">@offer.CurrencySymbol@offer.Price.ToString("N2")</span>
                                                    </td>
                                                    <td>
                                                        @if (offer.Discount > 0)
                                                        {
                                                            <span class="fw-medium">%@offer.Discount</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="fw-medium">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <h6 class="mb-0 text-primary">@offer.CurrencySymbol@offer.FinalPrice.ToString("N2")</h6>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-primary-subtle text-primary rounded-circle">
                                                                    @offer.CurrencySymbol
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">@offer.CurrencyName</h6>
                                                                <small class="text-muted">@offer.CurrencySymbol</small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="fw-medium">@offer.DeliveryTypeText</span>
                                                    </td>
                                                    <td>
                                                        @switch (offer.Status)
                                                        {
                                                            case OfferStatus.Pending:
                                                                <span class="badge bg-warning">Bekleyen</span>
                                                                break;
                                                            case OfferStatus.Approved:
                                                                <span class="badge bg-success">Onaylanan</span>
                                                                break;
                                                            case OfferStatus.Rejected:
                                                                <span class="badge bg-danger">Reddedilen</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="text-muted">@offer.OfferDate.ToString("dd.MM.yyyy")</div>
                                                        <small class="text-muted">@offer.OfferDate.ToString("HH:mm")</small>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-1">
                                                            @if (offer.Status == OfferStatus.Pending)
                                                            {
                                                                <button class="btn btn-success btn-sm" onclick="approveOffer(@offer.Id)" title="Teklifi Onayla">
                                                                    <i class="ri-check-line"></i> Onayla
                                                                </button>
                                                                <button class="btn btn-danger btn-sm" onclick="rejectOffer(@offer.Id)" title="Teklifi Reddet">
                                                                    <i class="ri-close-line"></i> Reddet
                                                                </button>
                                                            }
                                                        </div>
                                                    </td>
                                                

                                                </tr>
                                            }                                           
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="12" class="text-center py-5">
                                                    <div class="d-flex flex-column align-items-center">
                                                        <i class="ri-price-tag-line display-4 text-muted mb-3"></i>
                                                        <h5 class="text-muted">Henüz teklif bulunmuyor</h5>
                                                        <p class="text-muted mb-0">Tedarikçilerden teklif geldiðinde burada görüntülenecektir.</p>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Offer Details Modal -->
