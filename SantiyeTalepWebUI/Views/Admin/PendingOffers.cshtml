@model SantiyeTalepWebUI.Models.DTOs.OfferListViewModel
@{
    ViewData["Title"] = "Bekleyen Teklifler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Pulse animation for highlighted offers */
        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.02);
            }

            100% {
                transform: scale(1);
            }
        }

        .pulse-animation {
            animation: pulse 1s ease-in-out 3;
        }

        .offer-highlight {
            background-color: #fff3cd !important;
            border: 2px solid #ffc107 !important;
        }
    </style>
}

<div class="main-content" data-enable-notifications="true">
    <div class="page-content">
        <div class="container-fluid">

            <!-- Page Title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">
                            <i class="ri-time-line me-2"></i>Bekleyen Teklifler
                        </h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active">Bekleyen Teklifler</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-xl-4 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-uppercase fw-medium text-muted mb-0">Bekleyen Teklifler</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-warning fs-14 mb-0">
                                        <i class="ri-time-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-4">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-warning">
                                        <span class="counter-value" data-target="@Model.Offers.Count(o => o.Status == OfferStatus.Pending)">@Model.Offers.Count(o => o.Status == OfferStatus.Pending)</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-warning-subtle rounded fs-3">
                                        <i class="ri-time-line text-warning"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-uppercase fw-medium text-muted mb-0">Toplam Tutar</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-primary fs-14 mb-0">
                                        <i class="ri-money-dollar-circle-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-4">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-primary">
                                        <span class="counter-value" data-target="@Model.Offers.Where(o => o.Status == OfferStatus.Pending).Sum(o => o.FinalPrice)">@Model.Offers.Where(o => o.Status == OfferStatus.Pending).Sum(o => o.FinalPrice).ToString("N0")</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-primary-subtle rounded fs-3">
                                        <i class="ri-money-dollar-circle-line text-primary"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <p class="text-uppercase fw-medium text-muted mb-0">Tedarikçi Sayısı</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-info fs-14 mb-0">
                                        <i class="ri-user-star-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-4">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-info">
                                        <span class="counter-value" data-target="@Model.Offers.Where(o => o.Status == OfferStatus.Pending).Select(o => o.SupplierId).Distinct().Count()">@Model.Offers.Where(o => o.Status == OfferStatus.Pending).Select(o => o.SupplierId).Distinct().Count()</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-info-subtle rounded fs-3">
                                        <i class="ri-user-star-line text-info"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center justify-content-between">
                                <h4 class="card-title mb-0">
                                    <i class="ri-time-line me-2"></i>Onay Bekleyen Teklifler
                                </h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Currency Warning -->
                            <div class="alert alert-warning" role="alert">
                                <div class="d-flex">
                                    <div class="flex-shrink-0 me-3">
                                        <i class="ri-time-line fs-16"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="alert-heading">Bekleyen Teklifler</h5>
                                        <p class="mb-0">
                                            Bu sayfada sadece onay bekleyen teklifler listelenmektedir.
                                            Teklifler farklı para birimlerinde olabilir (₺, $, €, £).
                                            Karşılaştırma yaparken güncel kur değerlerini dikkate alınız.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Filters -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-4">
                                    <div class="search-box">
                                        <input type="text" class="form-control search" placeholder="Teklif ara..." id="searchInput">
                                        <i class="ri-search-line search-icon"></i>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <select class="form-select" id="supplierFilter">
                                        <option value="">Tüm Tedarikçiler</option>
                                        @foreach (var supplier in Model.Offers.Where(o => o.Status == OfferStatus.Pending).GroupBy(o => new { o.SupplierId, o.SupplierName }).Select(g => g.Key))
                                        {
                                            <option value="@supplier.SupplierId">@supplier.SupplierName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <input type="date" class="form-control" id="dateFilter" placeholder="Tarih filtrele">
                                </div>
                            </div>

                            <!-- Offers Table -->
                            <div class="table-responsive table-card">
                                <table class="table align-middle table-nowrap" id="offersTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Talep</th>
                                            <th>Tedarikçi</th>
                                            <th>Marka</th>
                                            <th>Miktar</th>
                                            <th>Birim Fiyat</th>
                                            <th>İskonto</th>
                                            <th>Toplam</th>
                                            <th>Para Birimi</th>
                                            <th>Teslimat</th>
                                            <th>Tarih</th>
                                            <th>Eylemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var pendingOffers = Model.Offers.Where(o => o.Status == OfferStatus.Pending).OrderByDescending(o => o.OfferDate);
                                        }
                                        @if (pendingOffers.Any())
                                        {
                                            @foreach (var offer in pendingOffers)
                                            {
                                                <tr class="offer-row" data-id="@offer.Id" data-supplier="@offer.SupplierId" data-date="@offer.OfferDate.ToString("yyyy-MM-dd")">
                                                    <td>
                                                        <div>
                                                            <h6 class="mb-1">#@offer.RequestId</h6>
                                                            <p class="text-muted mb-0 fs-12">@offer.RequestTitle</p>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-warning-subtle text-warning rounded-circle">
                                                                    @(offer.SupplierName.Substring(0, 1).ToUpper())
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">@offer.SupplierName</h6>
                                                                <small class="text-muted">@offer.CompanyName</small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-info-subtle text-info rounded-circle">
                                                                    @(offer.Brand.Substring(0, 1).ToUpper())
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">@offer.Brand</h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="fw-medium">@offer.Quantity</span>
                                                    </td>
                                                    <td>
                                                        <span class="fw-medium">@offer.CurrencySymbol@offer.Price.ToString("N2")</span>
                                                    </td>
                                                    <td>
                                                        @if (offer.Discount > 0)
                                                        {
                                                            <span class="badge bg-warning-subtle text-warning">%@offer.Discount</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <h6 class="mb-0 text-warning">@offer.CurrencySymbol@offer.FinalPrice.ToString("N2")</h6>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-primary-subtle text-primary rounded-circle">
                                                                    @offer.CurrencySymbol
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">@offer.CurrencyName</h6>
                                                                <small class="text-muted">@offer.CurrencySymbol</small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="fw-medium">@offer.DeliveryTypeText</span>
                                                    </td>
                                                    <td>
                                                        <div>
                                                            <div class="text-muted">@offer.OfferDate.ToString("dd.MM.yyyy")</div>
                                                            <small class="text-muted">@offer.OfferDate.ToString("HH:mm")</small>
                                                        </div>
                                                        <span class="badge bg-warning-subtle text-warning mt-1">
                                                            <i class="ri-time-line"></i> Bekliyor
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-1">
                                                            <button class="btn btn-success btn-sm" onclick="approveOffer(@offer.Id)" title="Teklifi Onayla">
                                                                <i class="ri-check-line"></i> Onayla
                                                            </button>
                                                            <button class="btn btn-danger btn-sm" onclick="rejectOffer(@offer.Id)" title="Teklifi Reddet">
                                                                <i class="ri-close-line"></i> Reddet
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="11" class="text-center py-5">
                                                    <div class="d-flex flex-column align-items-center">
                                                        <i class="ri-time-line display-4 text-muted mb-3"></i>
                                                        <h5 class="text-muted">Bekleyen teklif bulunmuyor</h5>
                                                        <p class="text-muted mb-0">Onay bekleyen teklifler burada görüntülenecektir.</p>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Offer Details Modal -->
<div class="modal fade" id="offerDetailsModal" tabindex="-1" aria-labelledby="offerDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="offerDetailsModalLabel">
                    <i class="ri-price-tag-3-line me-2"></i>Teklif Detayları
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="offerDetailsContent">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Auto-scroll to specific offer if offerId is provided in URL
        document.addEventListener('DOMContentLoaded', function() {
            // Counter animasyonları
            const counters = document.querySelectorAll('.counter-value');

            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                const start = 0;
                const duration = 1000;
                const step = (target - start) / (duration / 16);

                let current = start;
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    counter.textContent = Math.floor(current);
                }, 16);
            });

            // Check for offerId parameter and scroll to the offer
            const urlParams = new URLSearchParams(window.location.search);
            const offerId = urlParams.get('offerId');

            if (offerId) {
                // Wait a moment for the page to fully load
                setTimeout(() => {
                    const offerRow = document.querySelector(`tr[data-id="${offerId}"]`);
                    if (offerRow) {
                        // Highlight the offer row
                        offerRow.classList.add('offer-highlight', 'pulse-animation');

                        // Scroll to the offer
                        offerRow.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });

                        // Remove the highlight after 5 seconds
                        setTimeout(() => {
                            offerRow.classList.remove('offer-highlight', 'pulse-animation');
                        }, 5000);

                        // Show a toast notification
                        if (typeof Swal !== 'undefined') {
                            Swal.fire({
                                icon: 'warning',
                                title: 'Bekleyen Teklif',
                                text: `Teklif #${offerId} vurgulandı`,
                                timer: 3000,
                                showConfirmButton: false,
                                position: 'top-end',
                                toast: true
                            });
                        }
                    }
                }, 500);
            }
        });

        // Filtering
        if (document.getElementById('searchInput')) {
            document.getElementById('searchInput').addEventListener('input', filterOffers);
        }
        if (document.getElementById('supplierFilter')) {
            document.getElementById('supplierFilter').addEventListener('change', filterOffers);
        }
        if (document.getElementById('dateFilter')) {
            document.getElementById('dateFilter').addEventListener('change', filterOffers);
        }

        function filterOffers() {
            const searchInput = document.getElementById('searchInput');
            const supplierFilter = document.getElementById('supplierFilter');
            const dateFilter = document.getElementById('dateFilter');

            if (!searchInput || !supplierFilter || !dateFilter) {
                return;
            }

            const searchTerm = searchInput.value.toLowerCase();
            const supplierValue = supplierFilter.value;
            const dateValue = dateFilter.value;

            const rows = document.querySelectorAll('.offer-row');

            rows.forEach(row => {
                let show = true;

                if (searchTerm) {
                    const text = row.textContent.toLowerCase();
                    if (!text.includes(searchTerm)) {
                        show = false;
                    }
                }

                if (supplierValue && row.dataset.supplier !== supplierValue) {
                    show = false;
                }

                if (dateValue && row.dataset.date !== dateValue) {
                    show = false;
                }

                row.style.display = show ? '' : 'none';
            });
        }

        // Offer actions
        async function viewOfferDetails(offerId) {
            // Implementation for viewing offer details
            if (typeof Swal !== 'undefined') {
                Swal.fire('Bilgi', 'Teklif detayları gösterimi henüz implementlenmedi', 'info');
            }
        }

        async function approveOffer(offerId) {
            if (typeof Swal === 'undefined') {
                if (confirm('Bu teklifi onaylamak istediğinizden emin misiniz?')) {
                    submitOfferAction(offerId, 'approve');
                }
                return;
            }

            const result = await Swal.fire({
                title: 'Teklifi Onayla',
                text: 'Bu teklifi onaylamak istediğinizden emin misiniz?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Evet, Onayla',
                cancelButtonText: 'İptal',
                confirmButtonColor: '#28a745'
            });

            if (result.isConfirmed) {
                submitOfferAction(offerId, 'approve');
            }
        }

        async function rejectOffer(offerId) {
            if (typeof Swal === 'undefined') {
                if (confirm('Bu teklifi reddetmek istediğinizden emin misiniz?')) {
                    submitOfferAction(offerId, 'reject');
                }
                return;
            }

            const result = await Swal.fire({
                title: 'Teklifi Reddet',
                text: 'Bu teklifi reddetmek istediğinizden emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Evet, Reddet',
                cancelButtonText: 'İptal',
                confirmButtonColor: '#dc3545'
            });

            if (result.isConfirmed) {
                submitOfferAction(offerId, 'reject');
            }
        }

        async function submitOfferAction(offerId, action) {
            try {
                const url = action === 'approve' ? `/Admin/ApproveOffer/${offerId}` : `/Admin/RejectOffer/${offerId}`;
                const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');

                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': tokenElement ? tokenElement.value : ''
                    }
                });

                if (response.ok) {
                    const actionText = action === 'approve' ? 'onaylandı' : 'reddedildi';
                    const message = `Teklif ${actionText} ve tedarikçiye bildirim gönderildi`;

                    if (typeof Swal !== 'undefined') {
                        Swal.fire('Başarılı', message, 'success')
                            .then(() => window.location.reload());
                    } else {
                        alert(message);
                        window.location.reload();
                    }
                } else {
                    const actionText = action === 'approve' ? 'onaylanırken' : 'reddedilirken';
                    const errorMessage = `Teklif ${actionText} bir hata oluştu`;

                    if (typeof Swal !== 'undefined') {
                        Swal.fire('Hata', errorMessage, 'error');
                    } else {
                        alert(errorMessage);
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                const errorMessage = 'Bir hata oluştu';

                if (typeof Swal !== 'undefined') {
                    Swal.fire('Hata', errorMessage, 'error');
                } else {
                    alert(errorMessage);
                }
            }
        }
    </script>
}

