@model SantiyeTalepWebUI.Models.DTOs.UpdateSupplierDto
@{
    ViewData["Title"] = "Tedarikçi Düzenle";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Tedarikçi Düzenle</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/Admin/Suppliers">Tedarikçiler</a></li>
                                <li class="breadcrumb-item active">Tedarikçi Düzenle</li>
                            </ol>

                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->
            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show alert-modern" role="alert">
                    <i class="ri-checkbox-circle-line me-2 align-middle fs-16"></i>
                    <strong>Baþarýlý!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show alert-modern" role="alert">
                    <i class="ri-error-warning-line me-2 align-middle fs-16"></i>
                    <strong>Hata!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-warning alert-dismissible fade show alert-modern" role="alert">
                    <i class="ri-alert-line me-2 align-middle fs-16"></i>
                    <strong>Dikkat!</strong> Lütfen formdaki hatalarý düzeltin.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <ul class="mb-0 mt-2">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <div class="row justify-content-center">
                <div class="col-xxl-9">
                    <div class="card">
                        <div class="card-header align-items-center d-flex">
                            <h4 class="card-title mb-0 flex-grow-1">
                                <i class="ri-user-settings-line align-middle me-1 text-muted"></i>
                                Tedarikçi Bilgilerini Düzenle
                            </h4>
                        </div><!-- end card header -->

                        <div class="card-body">
                            <form asp-action="EditSupplier" method="post" class="needs-validation" novalidate>
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />

                                <!-- User Information -->
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted fw-semibold mb-3">
                                            <i class="ri-user-line me-2"></i>Kullanýcý Bilgileri
                                        </h6>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="FullName" class="form-label">Ad Soyad <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ri-user-line"></i></span>
                                                <input asp-for="FullName" class="form-control" placeholder="Ýletiþim kiþisinin adýný giriniz" required />
                                            </div>
                                            <span asp-validation-for="FullName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label">Email Adresi <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ri-mail-line"></i></span>
                                                <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" required />
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                            <div class="form-text">
                                                <i class="ri-information-line me-1"></i>Ýletiþim için kullanýlýr (giriþ telefon ile yapýlýr)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="Phone" class="form-label">Telefon Numarasý <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ri-phone-line"></i></span>
                                                <input asp-for="Phone" class="form-control" placeholder="05XX XXX XX XX" required />
                                            </div>
                                            <span asp-validation-for="Phone" class="text-danger small"></span>
                                            <div class="form-text">
                                                <i class="ri-phone-line me-1"></i>Giriþ için kullanýlýr. Örnek: 05551234567
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="Password" class="form-label">Yeni Þifre</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ri-lock-line"></i></span>
                                                <input asp-for="Password" type="password" class="form-control" placeholder="Deðiþtirmek için yeni þifre girin" />
                                                <button class="btn btn-outline-secondary password-toggle" type="button">
                                                    <i class="ri-eye-line"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger small"></span>
                                            <div class="form-text">
                                                <i class="ri-information-line me-1"></i>Boþ býrakýlýrsa þifre deðiþmez (En az 6 karakter)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label class="form-label">Durum</label>
                                            <div class="form-check form-switch form-switch-lg" style="margin-top: 10px;">
                                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch">
                                                <label class="form-check-label" for="isActiveSwitch" id="statusLabel">
                                                    @(Model.IsActive ? "Aktif" : "Pasif")
                                                </label>
                                            </div>
                                            <div class="form-text">Tedarikçi hesabýnýn durumunu belirtin</div>
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <!-- Company Information -->
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted fw-semibold mb-3">
                                            <i class="ri-building-line me-2"></i>Þirket Bilgileri
                                        </h6>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="CompanyName" class="form-label">Þirket Adý <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ri-building-2-line"></i></span>
                                                <input asp-for="CompanyName" class="form-control" placeholder="Þirket adýný giriniz" required />
                                            </div>
                                            <span asp-validation-for="CompanyName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label asp-for="TaxNumber" class="form-label">Vergi Numarasý <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ri-bank-card-line"></i></span>
                                                <input asp-for="TaxNumber" class="form-control" placeholder="Vergi numarasýný giriniz" required />
                                            </div>
                                            <span asp-validation-for="TaxNumber" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="Address" class="form-label">Adres <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ri-map-pin-line"></i></span>
                                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Þirket adresini giriniz" required></textarea>
                                            </div>
                                            <span asp-validation-for="Address" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="hstack gap-2 justify-content-end">
                                            <a href="/Admin/Suppliers" class="btn btn-light">
                                                <i class="ri-arrow-left-line align-bottom me-1"></i> Geri Dön
                                            </a>
                                            <button type="submit" class="btn btn-success">
                                                <i class="ri-save-line align-bottom me-1"></i> Deðiþiklikleri Kaydet
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div><!-- end card body -->
                    </div><!-- end card -->
                </div><!-- end col -->
            </div><!-- end row -->
            <!-- Additional Info Card -->
            <div class="row justify-content-center">
                <div class="col-xxl-9">
                    <div class="card bg-info-subtle border-0">
                        <div class="card-body">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <i class="ri-information-line fs-24 text-info"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="text-info mb-2">Önemli Notlar</h6>
                                    <ul class="mb-0 text-muted">
                                        <li><strong>Telefon numarasý</strong> giriþ için kullanýlýr (baþka kullanýcý kullanýyorsa deðiþtirilemez)</li>
                                        <li><strong>Email adresi</strong> iletiþim için kullanýlýr (baþka kullanýcý kullanýyorsa deðiþtirilemez)</li>
                                        <li><strong>Vergi numarasý</strong> benzersiz olmalýdýr (baþka tedarikçi kullanýyorsa deðiþtirilemez)</li>
                                        <li><strong>Þifre</strong> alanýný boþ býrakýrsanýz mevcut þifre deðiþmez</li>
                                        <li>Tedarikçi <strong>pasif</strong> yapýlýrsa sisteme giriþ yapamaz</li>
                                        <li>Telefon numarasýný boþluksuz ve tire olmadan giriniz (örn: 05551234567)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Status switch handler
        document.getElementById('isActiveSwitch').addEventListener('change', function() {
            const label = document.getElementById('statusLabel');
            label.textContent = this.checked ? 'Aktif' : 'Pasif';
        });

        // Password toggle
        document.addEventListener('DOMContentLoaded', function() {
            const phoneInput = document.getElementById('Phone');
            const passwordToggle = document.querySelector('.password-toggle');
            const passwordInput = document.querySelector('input[name="Password"]');

            // Phone number formatting
            phoneInput.addEventListener('input', function() {
                // Remove all non-numeric characters
                this.value = this.value.replace(/\D/g, '');

                // Limit to 11 digits (0 + 10 digits for Turkish phone numbers)
                if (this.value.length > 11) {
                    this.value = this.value.substring(0, 11);
                }
            });

            // Password visibility toggle
            if (passwordToggle && passwordInput) {
                passwordToggle.addEventListener('click', function() {
                    const icon = this.querySelector('i');
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        icon.classList.remove('ri-eye-line');
                        icon.classList.add('ri-eye-off-line');
                    } else {
                        passwordInput.type = 'password';
                        icon.classList.remove('ri-eye-off-line');
                        icon.classList.add('ri-eye-line');
                    }
                });
            }
        });
    </script>
}

<style>
    .alert-modern {
        border-left: 4px solid;
        box-shadow: 0 2px 4px rgba(0,0,0,.08);
    }

    .alert-success {
        border-left-color: #0ab39c;
    }

    .alert-danger {
        border-left-color: #f06548;
    }

    .alert-warning {
        border-left-color: #f7b84b;
    }
</style>
