@model SantiyeTalepWebUI.Models.DTOs.RequestListViewModel
@{
    ViewData["Title"] = "Tüm Talepler";
}

@Html.AntiForgeryToken()

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- Page Title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">
                            <i class="ri-file-list-3-line me-2"></i>Tüm Talepler
                        </h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                                <li class="breadcrumb-item active">Talepler</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1 overflow-hidden">
                                    <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Toplam Talepler</p>
                                </div>
                                <div class="flex-shrink-0">
                                    <h5 class="text-success fs-14 mb-0">
                                        <i class="ri-arrow-right-up-line fs-13 align-middle"></i>
                                    </h5>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-2">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-primary">
                                        <span class="counter-value" data-target="@Model.Requests.Count">@Model.Requests.Count</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-primary-subtle rounded fs-3">
                                        <i class="ri-file-list-3-line text-primary"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1 overflow-hidden">
                                    <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Açık Talepler</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-2">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-warning">
                                        <span class="counter-value" data-target="@Model.Requests.Count(r => r.Status == SantiyeTalepWebUI.Models.RequestStatus.Open)">@Model.Requests.Count(r => r.Status == SantiyeTalepWebUI.Models.RequestStatus.Open)</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-warning-subtle rounded fs-3">
                                        <i class="ri-time-line text-warning"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1 overflow-hidden">
                                    <p class="text-uppercase fw-medium text-muted text-truncate mb-0">İşlemde</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-2">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-info">
                                        <span class="counter-value" data-target="@Model.Requests.Count(r => r.Status == SantiyeTalepWebUI.Models.RequestStatus.InProgress)">@Model.Requests.Count(r => r.Status == SantiyeTalepWebUI.Models.RequestStatus.InProgress)</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-info-subtle rounded fs-3">
                                        <i class="ri-loader-line text-info"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card card-animate">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1 overflow-hidden">
                                    <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Tamamlanan</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-end justify-content-between mt-2">
                                <div>
                                    <h4 class="fs-22 fw-semibold ff-secondary mb-4 text-success">
                                        <span class="counter-value" data-target="@Model.Requests.Count(r => r.Status == SantiyeTalepWebUI.Models.RequestStatus.Completed)">@Model.Requests.Count(r => r.Status == SantiyeTalepWebUI.Models.RequestStatus.Completed)</span>
                                    </h4>
                                </div>
                                <div class="avatar-sm flex-shrink-0">
                                    <span class="avatar-title bg-success-subtle rounded fs-3">
                                        <i class="ri-check-double-line text-success"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Card -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center flex-wrap gap-2">
                                <div class="flex-grow-1">
                                    <h4 class="card-title mb-0">Talep Listesi</h4>
                                </div>
                                <div class="flex-shrink-0">
                                    <div class="d-flex gap-1 flex-wrap">
                                        <button class="btn btn-primary btn-sm" id="sendToSuppliersBtn" style="display: none;" onclick="showSupplierPanel()">
                                            <i class="ri-send-plane-line align-bottom me-1"></i> Tedarikçilere Gönder
                                        </button>
                                        <div class="vr" id="actionsDivider" style="display: none;"></div>
                                        <button class="btn btn-warning btn-sm" id="bulkOpenBtn" style="display: none;" onclick="bulkAction('open')">
                                            <i class="ri-file-open-line align-bottom me-1"></i> Seçilenleri Açık Hale Getir
                                        </button>
                                        <button class="btn btn-info btn-sm" id="bulkInProgressBtn" style="display: none;" onclick="bulkAction('inprogress')">
                                            <i class="ri-loader-line align-bottom me-1"></i> Seçilenleri İşleme Al
                                        </button>
                                        <button class="btn btn-success btn-sm" id="bulkApproveBtn" style="display: none;" onclick="bulkAction('approve')">
                                            <i class="ri-check-line align-bottom me-1"></i> Seçilenleri Onayla
                                        </button>                                       
                                        <button class="btn btn-danger btn-sm" id="bulkDeleteBtn" style="display: none;" onclick="bulkAction('delete')">
                                            <i class="ri-delete-bin-line align-bottom me-1"></i> Seçilenleri Sil
                                        </button>
                                        <div class="vr"></div>                                       
                                        <button class="btn btn-info btn-sm" onclick="window.location.reload()">
                                            <i class="ri-refresh-line align-bottom me-1"></i> Yenile
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <!-- Filters -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-4">
                                    <div class="search-box">
                                        <input type="text" class="form-control search" placeholder="Talep ara..." id="searchInput">
                                        <i class="ri-search-line search-icon"></i>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="statusFilter">
                                        <option value="">Tüm Durumlar</option>
                                        <option value="1">Açık</option>
                                        <option value="2">İşlemde</option>
                                        <option value="3">Tamamlandı</option>
                                        <option value="4">İptal</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="siteFilter">
                                        <option value="">Tüm Şantiyeler</option>
                                        @foreach (var site in Model.Requests.GroupBy(r => new { r.SiteId, r.SiteName }).Select(g => g.Key))
                                        {
                                            <option value="@site.SiteId">@site.SiteName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <input type="date" class="form-control" id="dateFilter" placeholder="Tarih filtrele">
                                </div>
                            </div>

                            <!-- Selection Info Bar -->
                            <div class="alert alert-info" id="selectionInfo" style="display: none;">
                                <i class="ri-information-line me-2"></i>
                                <span id="selectionCount">0</span> talep seçildi.
                                <button class="btn btn-sm btn-outline-info ms-2" onclick="clearSelection()">
                                    <i class="ri-close-line me-1"></i> Seçimi Temizle
                                </button>
                            </div>

                            <!-- Supplier Selection Panel -->
                            <div class="card" id="supplierSelectionPanel" style="display: none;">
                                <div class="card-header">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h6 class="card-title mb-0">
                                            <i class="ri-user-3-line text-primary me-2"></i>
                                            Tedarikçi Seçimi
                                        </h6>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="hideSupplierPanel()">
                                            <i class="ri-close-line me-1"></i> Kapat
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <div class="alert alert-warning">
                                                <i class="ri-information-line me-2"></i>
                                                Seçilen talepleri hangi tedarikçilere göndermek istiyorsunuz? Seçilen talepler otomatik olarak "İşlemde" durumuna geçecek ve tedarikçilere bildirim gönderilecektir.
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-semibold">Onaylı Tedarikçiler</label>
                                            <div class="form-text mb-3">En az bir tedarikçi seçmelisiniz</div>
                                            <div id="suppliersList" class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                                                <div class="text-center py-3">
                                                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                                                        <span class="visually-hidden">Yükleniyor...</span>
                                                    </div>
                                                    <p class="mt-2 mb-0 text-muted">Tedarikçiler yükleniyor...</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-semibold">Seçilen Talepler</label>
                                            <div class="form-text mb-3">Bu taleplerin tümü seçilen tedarikçilere gönderilecek</div>
                                            <div id="selectedRequestsList" class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                                                <!-- Selected requests will be populated here -->
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 justify-content-end">
                                                <button type="button" class="btn btn-secondary" onclick="hideSupplierPanel()">
                                                    <i class="ri-close-line me-1"></i> İptal
                                                </button>
                                                <button type="button" class="btn btn-primary" id="sendToSuppliersBtn" onclick="sendRequestsToSuppliers()">
                                                    <i class="ri-send-plane-line me-1"></i> Tedarikçilere Gönder
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Requests Table -->
                            <div class="table-responsive table-card mb-1" >
                                <table class="table align-middle table-nowrap" id="requestsTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 50px;">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" id="checkAll">
                                                </div>
                                            </th>
                                            <th class="sort sortable" data-sort="id" style="cursor: pointer;">
                                                ID <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="product" style="cursor: pointer;">
                                                Ürün <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="quantity" style="cursor: pointer;">
                                                Miktar <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="employee" style="cursor: pointer;">
                                                Çalışan <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="site" style="cursor: pointer;">
                                                Şantiye <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="delivery" style="cursor: pointer;">
                                                Teslim <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="status" style="cursor: pointer;">
                                                Durum <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="date" style="cursor: pointer;">
                                                Tarih <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th class="sort sortable" data-sort="offers" style="cursor: pointer;">
                                                Teklifler <i class="ri-arrow-up-down-line ms-1"></i>
                                            </th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody class="list form-check-all">
                                        @if (Model.Requests.Any())
                                        {
                                            @foreach (var request in Model.Requests.OrderByDescending(r => r.RequestDate))
                                            {
                                                <tr class="request-row" 
                                                    data-id="@request.Id" 
                                                    data-status="@((int)request.Status)" 
                                                    data-site="@request.SiteId" 
                                                    data-date="@request.RequestDate.ToString("yyyy-MM-dd")"
                                                    data-product="@request.ProductDescription"
                                                    data-quantity="@request.Quantity"
                                                    data-employee="@request.EmployeeName"
                                                    data-sitename="@request.SiteName"
                                                    data-delivery="@((int)request.DeliveryType)"
                                                    data-offers="@request.Offers.Count"
                                                    data-datetime="@request.RequestDate.ToString("yyyyMMddHHmmss")">
                                                    <td>
                                                        <div class="form-check">
                                                            <input class="form-check-input request-checkbox" type="checkbox" value="@request.Id">
                                                        </div>
                                                    </td>
                                                    <td class="id">
                                                        <a href="javascript:void(0);" onclick="viewRequestDetails(@request.Id)" class="fw-medium link-primary">#@request.Id</a>
                                                    </td>
                                                    <td class="product">
                                                        <div class="d-flex align-items-center">
                                                            <div class="flex-grow-1">
                                                                <h6 class="fs-14 mb-1">@request.ProductDescription</h6>
                                                                @if (!string.IsNullOrEmpty(request.Description))
                                                                {
                                                                    <p class="text-muted mb-0 fs-12">@(request.Description.Length > 50 ? request.Description.Substring(0, 50) + "..." : request.Description)</p>
                                                                }
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="quantity">
                                                        <span class="badge bg-primary-subtle text-primary">@request.Quantity</span>
                                                    </td>
                                                    <td class="employee">
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-primary-subtle text-primary rounded-circle">
                                                                    @(request.EmployeeName.Substring(0, 1).ToUpper())
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="fs-13 mb-0">@request.EmployeeName</h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="site">
                                                        <span class="badge bg-info-subtle text-info">@request.SiteName</span>
                                                    </td>
                                                    <td class="delivery">
                                                        @switch (request.DeliveryType)
                                                        {
                                                            case SantiyeTalepWebUI.Models.DeliveryType.TodayPickup:
                                                                <span class="badge bg-danger-subtle text-danger">Bugün Alınacak</span>
                                                                break;
                                                            case SantiyeTalepWebUI.Models.DeliveryType.SameDayDelivery:
                                                                <span class="badge bg-warning-subtle text-warning">Gün İçi</span>
                                                                break;
                                                            case SantiyeTalepWebUI.Models.DeliveryType.NextDayDelivery:
                                                                <span class="badge bg-info-subtle text-info">Yarın</span>
                                                                break;
                                                            case SantiyeTalepWebUI.Models.DeliveryType.BusinessDays1to2:
                                                                <span class="badge bg-secondary-subtle text-secondary">1-2 Gün</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td class="status">
                                                        @switch (request.Status)
                                                        {
                                                            case SantiyeTalepWebUI.Models.RequestStatus.Open:
                                                                <span class="badge bg-warning">Açık</span>
                                                                break;
                                                            case SantiyeTalepWebUI.Models.RequestStatus.InProgress:
                                                                <span class="badge bg-info">İşlemde</span>
                                                                break;
                                                            case SantiyeTalepWebUI.Models.RequestStatus.Completed:
                                                                <span class="badge bg-success">Tamamlandı</span>
                                                                break;
                                                            case SantiyeTalepWebUI.Models.RequestStatus.Cancelled:
                                                                <span class="badge bg-danger">İptal</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td class="date">
                                                        <div class="text-muted">@request.RequestDate.ToString("dd.MM.yyyy")</div>
                                                        <small class="text-muted">@request.RequestDate.ToString("HH:mm")</small>
                                                    </td>
                                                    <td class="offers">
                                                        @if (request.Offers.Any())
                                                        {
                                                            <span class="badge bg-success-subtle text-success">@request.Offers.Count Teklif</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Teklif Yok</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-2">
                                                            <div class="dropdown">
                                                                <button class="btn btn-soft-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                                    <i class="ri-more-fill align-middle"></i>
                                                                </button>
                                                                <ul class="dropdown-menu dropdown-menu-end">
                                                                    <li><a class="dropdown-item" href="javascript:void(0);" onclick="viewRequestDetails(@request.Id)"><i class="ri-eye-fill align-bottom me-2 text-muted"></i> Görüntüle</a></li>
                                                                    @if (request.Status == SantiyeTalepWebUI.Models.RequestStatus.Open)
                                                                    {
                                                                        <li><a class="dropdown-item" href="javascript:void(0);" onclick="changeRequestStatus(@request.Id, 2)"><i class="ri-loader-line align-bottom me-2 text-muted"></i> İşleme Al</a></li>
                                                                        <li><a class="dropdown-item" href="javascript:void(0);" onclick="changeRequestStatus(@request.Id, 3)"><i class="ri-check-line align-bottom me-2 text-muted"></i> Tamamla</a></li>
                                                                    }
                                                                    @if (request.Status == SantiyeTalepWebUI.Models.RequestStatus.InProgress)
                                                                    {
                                                                        <li><a class="dropdown-item" href="javascript:void(0);" onclick="changeRequestStatus(@request.Id, 3)"><i class="ri-check-line align-bottom me-2 text-muted"></i> Tamamla</a></li>
                                                                        <li><a class="dropdown-item" href="javascript:void(0);" onclick="changeRequestStatus(@request.Id, 1)"><i class="ri-time-line align-bottom me-2 text-muted"></i> Açık Hale Getir</a></li>

                                                                    }
                                                                    @if (request.Status != SantiyeTalepWebUI.Models.RequestStatus.Completed && request.Status != SantiyeTalepWebUI.Models.RequestStatus.Cancelled)
                                                                    {
                                                                        <li><a class="dropdown-item text-warning" href="javascript:void(0);" onclick="changeRequestStatus(@request.Id, 4)"><i class="ri-close-line align-bottom me-2"></i> İptal Et</a></li>
                                                                    }
                                                                    <li><hr class="dropdown-divider"></li>
                                                                    <li><a class="dropdown-item text-danger" href="javascript:void(0);" onclick="deleteRequest(@request.Id)"><i class="ri-delete-bin-fill align-bottom me-2"></i> Sil</a></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                            @for (int i = Model.Requests.Count; i < 3; i++)
                                            {
                                                <tr class="empty-row" style="height: 80px;">
                                                    <td colspan="11">&nbsp;</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="11" class="text-center py-5">
                                                    <div class="d-flex flex-column align-items-center">
                                                        <i class="ri-file-list-3-line display-4 text-muted mb-3"></i>
                                                        <h5 class="text-muted">Henüz talep bulunmuyor</h5>
                                                        <p class="text-muted mb-0">İlk talebin oluşturulmasını bekleyin.</p>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="text-muted">
                                    Toplam <strong>@Model.Requests.Count</strong> talep gösteriliyor
                                </div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">Önceki</a>
                                        </li>
                                        <li class="page-item active">
                                            <a class="page-link" href="#">1</a>
                                        </li>
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">Sonraki</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Request Details Modal -->
<div class="modal fade" id="requestDetailsModal" tabindex="-1" aria-labelledby="requestDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="requestDetailsModalLabel">
                    <i class="ri-file-list-3-line me-2"></i>Talep Detayları
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="requestDetailsContent">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include SweetAlert2 for better user notifications -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Sorting functionality
        let currentSort = { column: 'date', order: 'desc' };

        document.querySelectorAll('.sortable').forEach(header => {
            header.addEventListener('click', function() {
                const sortColumn = this.dataset.sort;
                
                // Toggle sort order
                if (currentSort.column === sortColumn) {
                    currentSort.order = currentSort.order === 'asc' ? 'desc' : 'asc';
                } else {
                    currentSort.column = sortColumn;
                    currentSort.order = 'asc';
                }
                
                // Update sort icons
                updateSortIcons(sortColumn, currentSort.order);
                
                // Sort the table
                sortTable(sortColumn, currentSort.order);
            });
        });

        function updateSortIcons(activeColumn, order) {
            document.querySelectorAll('.sortable i').forEach(icon => {
                const column = icon.parentElement.dataset.sort;
                if (column === activeColumn) {
                    if (order === 'asc') {
                        icon.className = 'ri-arrow-up-line ms-1';
                    } else {
                        icon.className = 'ri-arrow-down-line ms-1';
                    }
                } else {
                    icon.className = 'ri-arrow-up-down-line ms-1';
                }
            });
        }

        function sortTable(column, order) {
            const tbody = document.querySelector('#requestsTable tbody');
            const rows = Array.from(tbody.querySelectorAll('.request-row'));
            
            rows.sort((a, b) => {
                let aValue, bValue;
                
                switch(column) {
                    case 'id':
                        aValue = parseInt(a.dataset.id);
                        bValue = parseInt(b.dataset.id);
                        break;
                    case 'product':
                        aValue = a.dataset.product.toLowerCase();
                        bValue = b.dataset.product.toLowerCase();
                        break;
                    case 'quantity':
                        aValue = parseInt(a.dataset.quantity);
                        bValue = parseInt(b.dataset.quantity);
                        break;
                    case 'employee':
                        aValue = a.dataset.employee.toLowerCase();
                        bValue = b.dataset.employee.toLowerCase();
                        break;
                    case 'site':
                        aValue = a.dataset.sitename.toLowerCase();
                        bValue = b.dataset.sitename.toLowerCase();
                        break;
                    case 'delivery':
                        aValue = parseInt(a.dataset.delivery);
                        bValue = parseInt(b.dataset.delivery);
                        break;
                    case 'status':
                        aValue = parseInt(a.dataset.status);
                        bValue = parseInt(b.dataset.status);
                        break;
                    case 'date':
                        aValue = a.dataset.datetime;
                        bValue = b.dataset.datetime;
                        break;
                    case 'offers':
                        aValue = parseInt(a.dataset.offers);
                        bValue = parseInt(b.dataset.offers);
                        break;
                    default:
                        return 0;
                }
                
                if (aValue < bValue) return order === 'asc' ? -1 : 1;
                if (aValue > bValue) return order === 'asc' ? 1 : -1;
                return 0;
            });
            
            // Re-append rows in sorted order
            rows.forEach(row => tbody.appendChild(row));
            
            // Re-append empty rows if they exist
            const emptyRows = Array.from(tbody.querySelectorAll('.empty-row'));
            emptyRows.forEach(row => tbody.appendChild(row));
        }

